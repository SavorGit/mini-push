/* pages/game/climbtree/index.wxss */

.container {
  background-image: url("http://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/games/monkeys_climb_trees/game_bg.png");
  background-size: 100vw 100vh;
}

.page-bottom {
  position: absolute;
  width: 100%;
  height: 120rpx;
  bottom: 120rpx;
}

.page-bottom button {
  width: 326rpx;
  height: 89rpx;
  background-image: url("http://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/games/monkeys_climb_trees/launch_game.png");
  background-size: 326rpx 89rpx;
  background-color: unset;
  border: unset;
}

.page-bottom button::before, .page-bottom button::after {
  background-color: unset;
  border: unset;
}

.page-bottom .game-tip {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
