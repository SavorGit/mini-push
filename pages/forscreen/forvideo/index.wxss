.launch_video_page_a .launch_history > .title {
  text-align: left;
  padding: 15rpx;
}

.launch_video_page_a .launch_history > .title > image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.launch_video_page_a .launch_history > scroll-view {
  width: 100%;
  height: calc(100vh - 810rpx);
}

.launch_video_page_a .launch_history .no_data {
  min-height: 300rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.launch_video_page_a .launch_history .history_list {
  padding: 0rpx 30rpx 20rpx 30rpx;
}

.launch_video_page_a .launch_history .history_list .line {
  width: 100%;
  height: 0rpx;
  border: 1rpx solid #333;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.launch_video_page_a .launch_history .history_list .pic {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.launch_video_page_a .launch_history .history_list .pic > .weui-grids {
  width: 570rpx;
}

.launch_video_page_a .launch_history .history_list .pic > .weui-grids > .weui-grid {
  width: 95rpx;
  height: 100rpx;
}

.launch_video_page_a .launch_history .history_list .pic > .weui-grids > .weui-grid > image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
  margin: 5rpx 5rpx 5rpx 0rpx;
}

.launch_video_page_a .launch_history .history_list .pic > .btn {
  width: calc(100vw - 630rpx);
  text-align: right;
}

.launch_video_page_a .launch_history .history_list .pic > .btn > button::before,
.launch_video_page_a .launch_history .history_list .pic > .btn > button::after {
  border: unset;
}

.launch_video_page_a .launch_history .history_list .pic > .btn > button {
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 10rpx;
  padding: 0rpx;
  margin-top: 5rpx;
  margin-right: 0rpx;
  background-color: #0e1c29;
  color: #fff;
  font-size: 24rpx;
}

.launch_video_page_a .launch_history .history_list .video {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.launch_video_page_a .launch_history .history_list .video > .cover > navigator {
  width: 90rpx;
  height: 90rpx;
}

.launch_video_page_a .launch_history .history_list .video > .cover > navigator > image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  margin: 5rpx 5rpx 5rpx 0rpx;
}

.launch_video_page_a .launch_history .history_list .video > .cover > view > navigator {
  margin-top: -65rpx;
  margin-left: 25rpx;
  width: 40rpx;
  height: 40rpx;
}

.launch_video_page_a .launch_history .history_list .video > .cover > view > navigator > image {
  width: 100%;
  height: 100%;
}

.launch_video_page_a .launch_history .history_list .video > .btn {
  width: calc(100vw - 150rpx);
  text-align: right;
}

.launch_video_page_a .launch_history .history_list .video > .btn > button::before,
.launch_video_page_a .launch_history .history_list .video > .btn > button::after {
  border: unset;
}

.launch_video_page_a .launch_history .history_list .video > .btn > button {
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 10rpx;
  padding: 0rpx;
  margin-right: 0rpx;
  background-color: #0e1c29;
  color: #fff;
  font-size: 24rpx;
}

/* =============== 打断投屏弹窗开始 =============== */

.bottom-pop-window-container {
  width: 100%;
  height: 100%;
  text-align: left;
  border-radius: 10rpx;
}

.bottom-pop-window-container > .bottom-pop-window-top {
  padding: 50rpx 0rpx 20rpx 0rpx;
}

.bottom-pop-window-container > .bottom-pop-window-top > .title > label {
  font-weight: bold;
  padding-left: 20rpx;
}

.bottom-pop-window-container > .bottom-pop-window-main {
  padding: 20rpx 40rpx;
  margin-bottom: 20rpx;
}

.bottom-pop-window-container > .bottom-pop-window-main > .content {
  display: block;
  margin-bottom: 20rpx;
}

.bottom-pop-window-container > .bottom-pop-window-bottom {
  height: 120rpx;
}

.bottom-pop-window-container > .bottom-pop-window-bottom > button {
  width: 285rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  display: inline-block;
  margin: 0rpx 40rpx;
}

