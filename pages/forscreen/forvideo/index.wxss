/* pages/forscreen/forvideo/index.wxss */

/** ================================== 上传视频前 ================================== **/

.launch_video_page_b {
  margin: 0rpx;
  padding: 0rpx;
  border: 0rpx;
  height: 100%;
}

.launch_video_page_b .page_top {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.launch_video_page_b .page_top > label {
  margin-left: 30rpx;
}

.launch_video_page_b .page_top > button {
  width: 150rpx;
  height: 60rpx;
}

.launch_video_page_b .page_main {
  width: 100%;
  height: calc(100% - 168rpx);
  text-align: center;
}

.launch_video_page_b .page_main > view.cover > video {
  width: 100%;
  height: 484rpx;
}

.launch_video_page_b .page_main > view.cover > view {
  margin-top: 63rpx;
  margin-bottom: 100rpx;
}

.launch_video_page_b .page_main > view.cover > view > progress {
  margin-top: 16rpx;
  margin-left: calc((100vw - 450rpx) / 2);
  width: 450rpx;
  height: 5px;
  border-radius: 2px;
  overflow: hidden;
}

.launch_video_page_b .page_main > .grant_auth {
  min-height: 10rpx;
  margin: 10rpx 0rpx 30rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.launch_video_page_b .page_main > .grant_auth > .checkbox-group {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.launch_video_page_b .page_main > .grant_auth > .checkbox-group checkbox {
  font-size: 28rpx;
}

.launch_video_page_b .page_main > .grant_auth > .checkbox-group checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  background: unset;
}

.launch_video_page_b .page_main > .grant_auth > .checkbox-group checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #1cbeb6;
  border-color: #1cbeb6;
}

.launch_video_page_b .page_main > .grant_auth > .checkbox-group checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.launch_video_page_b .page_main > .speak_with_interest {
  padding: 10rpx 30rpx;
}

.launch_video_page_b .page_main > .speak_with_interest > textarea {
  width: 690rpx;
  height: 200rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #0e1c29;
  text-align: left;
}

.launch_video_page_b .page_bottom {
  height: 100rpx;
}

.launch_video_page_b .page_bottom > .uploading {
  background-color: #106763;
}

.launch_video_page_b .page_bottom > button {
  height: 100rpx;
  line-height: 100rpx;
  margin: 0rpx;
  border-radius: 0rpx;
}

