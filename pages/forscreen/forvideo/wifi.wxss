/* pages/launch/video/index.wxss */

.page-top {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.page-top label {
  margin-left: 50rpx;
}

.page-main {
  height: calc(100% - 208rpx);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.page-main > .savor-btn {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 30rpx auto auto auto;
  padding: unset;
}

.page-bottom {
  height: 120rpx;
  text-align: center;
}

.page-bottom > .button_group {
  width: calc(100% - 80rpx);
  padding: 0 40rpx;
}

.page-bottom > .button_group button {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  margin: auto 0;
  padding: unset;
  border: unset;
  font-size: 28rpx;
}
