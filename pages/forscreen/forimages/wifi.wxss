/* pages/launch/pic/index.wxss */

.page-top {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.page-top label {
  margin-left: 50rpx;
}

.upoad-form {
  height: calc(100% - 88rpx);
}

.page-main {
  width: 100%;
  height: calc(100% - 168rpx);
  text-align: center;
}

.grids-frame {
  width: calc(100% - 70rpx);
  height: 458rpx;
  padding: 35rpx;
}

view.pic_show {
  margin: 3rpx;
  width: 224rpx;
  height: 224rpx;
  text-align: center;
}

image.pic_show {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  background-color: #333;
}

image.pic_show_cur {
  width: 216rpx;
  height: 216rpx;
  border: 4rpx solid rgb(28, 190, 182);
}

.upload_mask {
  margin: 3rpx;
  width: 224rpx;
  height: 224rpx;
  line-height: 224rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  background-color: #000;
  color: #fff;
  font-size: 50rpx;
  border-radius: 10rpx;
}

.page-main > .pic_text {
  padding: 10rpx 30rpx;
}

.page-main > .pic_text > label {
  margin: 25rpx 0 24rpx 28rpx;
}

.page-main > .pic_text > textarea {
  width: 690rpx;
  height: 100rpx;
  font-size: 28rpx;
  text-align: left;
}

.page-main > .savor-btn {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 30rpx auto auto auto;
  padding: unset;
}

.page-bottom {
  height: 100rpx;
}

.page-bottom > .button_group {
  width: calc(100% - 80rpx);
  padding: 0 40rpx;
}

.page-bottom > .button_group button {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  margin: auto 0;
  padding: unset;
  border: unset;
  font-size: 28rpx;
}
