/* pages/launch/pic/index.wxss */

.page-top {
  height: 88rpx;
  color: rgba(255, 255, 255, 0.8);
  background-color: rgb(0, 5, 8);
  font-size: 14px;
}

.page-top label {
  margin-left: 50rpx;
}

.upoad-form {
  height: calc(100% - 88rpx);
}

.page-main {
  height: calc(100% - 120rpx);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.grids-frame {
  width: calc(100% - 70rpx);
  height: 458rpx;
  margin: 35rpx calc(100vw - 718rpx) 35rpx calc(100vw - 717rpx);
}

view.pic_show {
  margin: 3rpx;
  width: 224rpx;
  height: 224rpx;
  text-align: center;
}

image.pic_show {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  background-color: #333;
}

image.pic_show_cur {
  width: 216rpx;
  height: 216rpx;
  border: 4rpx solid rgb(28, 190, 182);
}

.upload_mask {
  margin: 3rpx;
  width: 224rpx;
  height: 224rpx;
  line-height: 224rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  background-color: #000;
  color: #fff;
  font-size: 50rpx;
  border-radius: 10rpx;
}

.upload_success_frame {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  top: 180rpx;
  left: 180rpx;
}

.page-main > .pic_text > label {
  margin: 25rpx 0 24rpx 28rpx;
}

.page-main > .pic_text > textarea {
  margin: 24rpx 0 180rpx 28rpx;
  width: 690rpx;
  height: 148rpx;
  color: #fff;
  font-size: 28rpx;
  border: 1rpx #a5a19d solid;
  border-radius: 10rpx;
}

.page-bottom {
  height: 120rpx;
  text-align: center;
}

.page-bottom .button_1 {
  width: 99%;
  height: 114rpx;
  line-height: 114rpx;
  font-size: 16px;
  color: rgb(255, 255, 255);
  background-color: rgb(28, 190, 182);
}

.page-bottom .button_2 {
  display: inline-block;
  width: 49%;
  height: 112rpx;
  line-height: 112rpx;
  margin: 0rpx 0.45%;
  font-size: 16px;
  color: rgb(255, 255, 255);
  background-color: rgb(28, 190, 182);
}
