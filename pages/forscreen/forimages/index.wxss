/** pages/forscreen/forimages/index.wxss **/

.grids-frame {
  height: 458rpx;
  margin: 35rpx calc(100vw - 718rpx) 35rpx calc(100vw - 717rpx);
}

view.pic_show {
  margin: 3rpx;
  width: 224rpx;
  height: 224rpx;
  text-align: center;
}

image.pic_show {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  background-color: #333;
}

image.pic_show:active {
  width: 216rpx;
  height: 216rpx;
  border: 4rpx solid #1cbeb6;
}

image.pic_show::selection {
  width: 216rpx;
  height: 216rpx;
  border: 4rpx solid #1cbeb6;
}

image.pic_show_cur {
  width: 216rpx;
  height: 216rpx;
  border: 4rpx solid #1cbeb6;
}

.upload_mask {
  width: 224rpx;
  height: 224rpx;
  line-height: 224rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  background-color: #000;
  color: #fff;
  font-size: 50rpx;
  border-radius: 10rpx;
}

.upload_success_frame {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  top: 180rpx;
  left: 180rpx;
}

/* ================================== 上传图片前 ================================== */

.launch_pic_page_b {
  margin: 0;
  padding: 0;
  border: 0rpx;
  height: 100%;
}

.launch_pic_page_b > .page_top {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.launch_pic_page_b > .page_top > view > .tip_top_lable {
  position: relative;
  float: left;
  margin-left: 30rpx;
}

.launch_pic_page_b .page_main {
  width: 100%;
  height: calc(100% - 205rpx);
}

.launch_pic_page_b .page_main > .pic_text > label {
  margin: 25rpx 0 24rpx 28rpx;
}

.launch_pic_page_b .page_main > .pic_text > textarea {
  margin: 24rpx 0 50rpx 28rpx;
  width: 690rpx;
  height: 148rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #0e1c29;
}

.launch_pic_page_b .page_main > .grant_auth {
  margin: 10rpx 0rpx 100rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.launch_pic_page_b .page_main > .grant_auth > .checkbox-group {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.launch_pic_page_b .page_bottom {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}

.launch_pic_page_b .page_bottom > button {
  height: 95rpx;
  line-height: 95rpx;
  margin: 0px;
  border-radius: 0rpx;
}

