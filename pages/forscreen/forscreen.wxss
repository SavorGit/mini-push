/** /pages/forscreen/forscreen.wxss**/

/* ================================== 输入验证码页面 ================================== */

.content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: -220rpx;
}

.iptbox {
  margin-left: 29rpx;
  margin-right: 29rpx;
  width: 140rpx;
  height: 100rpx;
  border: 1rpx solid #ffd237;
  text-align: center;
}

.ipt {
  width: 0;
  height: 0;
}

.btn-area {
  width: 80%;
  background-color: #ffd237;
  color: #fff;
}

view.input_num {
  padding: 30rpx 30rpx 0rpx 30rpx;
  width: calc(100vw - 60rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
}

image.input_pic_banner {
  width: 695rpx;
  height: 695rpx;
}

label.input_tip {
  margin-top: 36rpx;
  margin-bottom: 36rpx;
}

/* ================================== 列表页 1.2.0 ================================== */

.scroll_container {
  width: 100%;
  height: calc(100vh - 208rpx);
  background: #fff;
}

swiper {
  height: 315rpx;
  width: 100%;
}

swiper-image {
  height: 100%;
  width: 100%;
}

.slide-image {
  height: 100%;
  width: 100%;
}

.article {
  margin: 0;
  padding: 0;
}

.article > .operation {
  margin-top: 132rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.article > .operation > navigator {
  margin-left: calc((100vw - 320rpx)/4);
  margin-right: calc((100vw - 320rpx)/4);
  background: transparent;
}

.article > .operation > navigator > button {
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(0, 0, 0, 0.3);
  color: #fafafa;
  font-size: 24rpx;
  border-radius: 24rpx;
  border: 1rpx solid #fff;
}

.article > .video_info {
  margin-top: 124rpx;
  margin-left: calc(100vw - 130rpx);
  margin-bottom: 20rpx;
  width: 100rpx;
  height: 36rpx;
  display: flex;
  text-align: center;
}

.article > .video_info > label {
  width: 100rpx;
  height: 36rpx;
  line-height: 36rpx;
  color: #f6f2ed;
  font-size: 22rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 13rpx;
  z-index: 2;
}

.article > .cover {
  margin-top: -410rpx;
  margin-left: 10rpx;
  width: calc(100vw - 20rpx);
}

.article > .cover > image {
  width: calc(100vw - 20rpx);
  height: 410rpx;
  background-color: #932c3f;
  z-index: 1;
}

.article > .title {
  padding: 20rpx 0 0 20rpx;
  font-size: 30rpx;
  color: #434343;
  background: #fff;
  display: flex;
}

.article > .title > label {
  text-shadow: 0 1px 1px #999;
  z-index: 2;
}

.top {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
}

.top > label {
  margin-left: 30rpx;
  max-width: 510rpx;
  word-break: keep-all;
  white-space: nowrap;
  display: inline;
  overflow: hidden;
  text-overflow: ellipsis;
}

.top > button {
  width: 150rpx;
  height: 55rpx;
  border: 1rpx solid #932c3f;
  border-radius: 12rpx;
}

.fix_container {
  width: 100%;
  height: 138rpx;
}

.fix_container > .operation {
  margin-left: 60rpx;
  width: calc(100vw - 120rpx);
}

.fix_container > .operation > view {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33333333%;
  box-sizing: border-box;
}

.fix_container > .operation > view > image {
  margin-top: 15rpx;
  margin-bottom: 8rpx;
  width: 60rpx;
  height: 60rpx;
}
