.article > .video > video {
  margin: unset;
  padding: unset;
  border: unset;
  width: 100%;
  height: 450rpx;
}

.article > .video > image {
  margin: unset;
  padding: unset;
  border: unset;
  width: 100%;
  height: 450rpx;
}

.article > .title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  /* display: flex;
  flex-direction:row;
  align-items: center; */
  background: #fff;
  text-align: center;
  display: none;
}

.article > .title > label {
  font-size: 30rpx;
  color: #434343;
}

.article > .con_bottom {
  height: 80rpx;
  line-height: 80rpx;
  margin-top: -8rpx;
}

.article > .con_bottom > .operation {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.article > .con_bottom > .operation > view {
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.article > .con_bottom > .operation > view > image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.article > .con_bottom > .operation > view > button > image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.article > .con_bottom > .operation > view > button {
  margin: 0;
  padding: 0;
  height: 60rpx;
  line-height: 60rpx;
  background: none;
}

.article > .con_bottom > .operation > view > button::after {
  border: none;
  outline: none;
}

.page_bottom {
  height: 100rpx;
  line-height: 100rpx;
}

.page_bottom button {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  border-radius: 0rpx;
}
