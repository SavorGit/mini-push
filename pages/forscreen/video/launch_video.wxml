<!-- pages/forscreen/video/launch_video.wxml -->
<import src="/pages/template/commons" />
<template is="navigationBarForTwoLevel" data='{{statusBarHeight: statusBarHeight,titleText:"热点投屏"}}' />

<!-- ================================== 点播页面 ================================== -->
<view class="container" style='height: calc(100vh - 46px - {{statusBarHeight}}px);'>
  <view class='full_width page_top'></view>
  <view class='full_width page_main'>
    <view class='full_width article'>
      <view class='full_width video'>
        <video src="{{video_url}}" autoplay="false"></video>
      </view>
      <view class='title'>
        <label>{{video_name}}</label>
      </view>
      <!-- <view style='margin-top: 50rpx; text-align: center;'>
      <navigator class='link_relief font_932C3F_30' open-type='reLaunch' url='/pages/demand/index'>更多...</navigator>
    </view> -->
      <view class='con_bottom theme2'>
        <view class='full_height operation'>
          <view>
            <image src='/images/icon2/666666_play1.png'></image>
            <label class='font_333333_26'>100</label>
          </view>
          <view wx:if="{{bean.is_collect==1}}">
            <image src='/images/icon2/FF0000_heart.png' bindtap='cancCollect' data-res_id="{{bean.id}}" data-type='{{bean.type}}' data-res_key="{{index}}"></image>
            <label class='font_333333_26'>{{bean.collect_num}}</label>
          </view>
          <view wx:else>
            <image src='/images/icon2/666666_heart.png' bindtap='onCollect' data-res_id="{{bean.id}}" data-type='{{bean.type}}' data-res_key="{{index}}"></image>
            <label class='font_333333_26'>{{bean.collect_num}}</label>
          </view>
          <!--<view>
              <image src='/images/icon2/666666_comment.png'></image>
              <label class='font_333333_26'>100</label>
            </view>-->
          <view>
            <button open-type='share' data-openid="{{openid}}" data-res_id="{{bean.id}}" data-type='{{bean.type}}' data-res_key="{{index}}" data-video_url="{{bean.tx_url}}" data-video_name="{{bean.title}}" data-video_img='{{bean.img_url}}'>
              <image src='/images/icon2/666666_share.png'></image>
              <label class='font_333333_26'>{{bean.share_num}}</label>
            </button>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class='full_width page_bottom'>
    <button class='full_width theme-button'>电视播放</button>
  </view>
</view>