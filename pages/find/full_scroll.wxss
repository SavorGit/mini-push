/* pages/find/full_scroll.wxss */
@import "/animation.wxss";

page {
  height: 100%;
  background: 000;
  color: #fff;
}

.container-fill {
  height: 100%;
  overflow: hidden;
}

.default-navigation-bar .text {
  font-size: 16px;
  font-weight: bold;
}

.page-top {
  height: 40rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
}

.page-top cover-view, .page-top image, .page-top label {
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: block;
  text-align: center;
}

.page-top image {
  width: 2rpx;
}

.page-main {
  height: calc(100% - 66px - 265rpx);
}

.page-main > .right-btn-group {
  width: 84rpx;
  height: 497rpx;
  margin-right: 15rpx;
  /* background: hsla(0, 0%, 100%, 0.25) border-box; */
  border-radius: 10rpx;
}

.page-main > .right-btn-group > .user-hader-img {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
}

.page-main > .right-btn-group > .btn-favorite,
.page-main > .right-btn-group > .btn-share,
.page-main > .right-btn-group > .btn-tv {
  width: 60rpx;
  height: 60rpx;
  margin-top: 40rpx;
}

.page-main > .right-btn-group > .btn-share button,
.page-main > .right-btn-group > .btn-share button image {
  width: 60rpx;
  height: 60rpx;
  border: 0;
  margin: 0;
  padding: 0;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.page-main > .right-btn-group > .btn-share button {
  background: unset;
}

.page-main > .right-btn-group > .btn-favorite {
  height: 54rpx;
  margin-top: 60rpx;
}

.page-main > .right-btn-group > .btn-tv {
  height: 57rpx;
}

.page-main > .right-btn-group > label {
  height: 24rpx;
  line-height: 24rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
}

.active .img-content, .active .video-content {
  -webkit-animation-duration: 0.5s;
  animation-duration: 0.5s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  -webkit-animation-name: fadeInDown;
  animation-name: fadeInDown;
}

.img-content, .video-content {
  width: 100%;
  height: 100%;
}

.video-content {
  width: calc(100% - 50rpx);
  height: 200rpx;
  margin: 0 auto;
  padding: 0 25rpx;
  display: flex;
  position: relative;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.1);
}

.img-content {
  position: relative;
  margin-top: -100vh;
}

.video-content .content-header {
  width: calc(100% - 135rpx);
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  padding-right: 135rpx;
}

.img-content .content-body, .video-content .content-body {
  width: calc(100% - 135rpx);
  height: calc(100% - 70rpx);
  line-height: 26rpx;
  margin-top: 20rpx;
  padding-right: 135rpx;
  font-size: 24rpx;
}

/* ================================= */

.controls {
  position: relative;
  top: 50%;
  height: 50px;
  margin-top: -25px;
  display: flex;
}

.play, .pause, .time {
  flex: 1;
  height: 100%;
}

.time {
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  line-height: 50px;
}

.img {
  width: 40px;
  height: 40px;
  margin: 5px auto;
}
