/* pages/find/box_video.wxss */
@import "/animation.wxss";

page {
  width: 100vw;
  height: 100vh;
  background: 000;
  color: #fff;
}

.picture-page, .media-page {
  width: 100%;
  height: 100%;
}

/* ============================================ 视频展示 ============================================ */

.media-page .container-fill {
  height: 100%;
  overflow: hidden;
}

.media-page .default-navigation-bar .text {
  font-size: 16px;
  font-weight: bold;
}

.media-page .default-navigation-bar > .navigation-bar > .btn .go-back {
  padding-left: 5px;
  padding-right: 5px;
  font-size: 12px;
}

.media-page .default-navigation-bar > .navigation-bar > .btn .go-back > cover-image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.media-page .default-navigation-bar > .navigation-bar > .btn .go-back > .text {
  font-size: 12px;
}

.media-page .page-top {
  width: 100%;
  height: 40rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
}

.media-page .page-main {
  max-height: calc(100% - 46px - 266rpx);
}

.media-page .page-main > .video-option-area {
  width: calc(100% - 198rpx);
  height: 100%;
}

.media-page .page-main > .video-option-area .btn-play {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.65);
}

.media-page .page-main > .video-option-area .btn-play .fa-play,
.media-page .page-main > .video-option-area .btn-play .fa-refresh {
  font-size: 60rpx;
}

.media-page .page-main > .video-option-area .btn-play .fa-play {
  margin-top: 5rpx;
  margin-left: 15rpx;
}

.media-page .page-main > .right-btn-group {
  width: 84rpx;
  height: 497rpx;
  margin-right: 15rpx;
  border-radius: 10rpx;
}

.media-page .active .video-content {
  -webkit-animation-duration: 0.5s;
  animation-duration: 0.5s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  -webkit-animation-name: fadeInDown;
  animation-name: fadeInDown;
}

.media-page .video-content {
  width: calc(100% - 50rpx);
  height: 200rpx;
  margin: 0 auto;
  padding: 0 25rpx;
  display: flex;
  position: relative;
  top: 0;
  left: 0;
}
