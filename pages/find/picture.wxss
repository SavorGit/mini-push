/* pages/find/picture.wxss */

.page_top {
  display: none;
}

.page_main .article {
  padding: 0rpx 60rpx;
}

.page_main .article .con_top {
  height: 120rpx;
  line-height: 120rpx;
}

.page_main .article .con_top .user_info image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.page_main .article .con_top .user_info label {
  margin-left: 20rpx;
  font-size: 36rpx;
  vertical-align: middle;
}

.page_main .article .con_main .speak_with_interest label {
  word-break: break-all;
  line-height: 50rpx;
  display: block;
  font-size: 30rpx;
}

.page_main .article .con_main .weui-grids .weui-grid {
  width: 210rpx;
  height: 210rpx;
  padding: 5rpx;
}

.page_main .article .con_main .weui-grids .weui-grid image {
  width: 100%;
  height: 100%;
}

.page_main .article .con_bottom {
  height: 90rpx;
  margin-top: 10rpx;
  font-size: 32rpx;
}

.page_main .article .con_bottom > .operation {
  height: 50rpx;
}

.page_main .article .con_bottom > .operation > view,
.page_main .article .con_bottom > .operation > button {
  margin: 0 20rpx 0 0;
}

.page_main > .btn-group {
  margin-top: 30rpx;
  text-align: center;
}

.page_main > .btn-group > button {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.page_bottom {
  height: 100rpx;
}
