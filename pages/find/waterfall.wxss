/* pages/find/waterfall.wxss */

.page_top {
  width: 100%;
  height: 80rpx;
  text-align: center;
  vertical-align: top;
}

.page_top .categry {
  vertical-align: top;
}

.page_top .categry label {
  font-size: 36rpx;
  vertical-align: middle;
}

.page_top .categry image {
  width: 5rpx;
  height: 40rpx;
  vertical-align: middle;
  margin: 0rpx 30rpx;
}

.page_top .categry navigator {
  font-size: 36rpx;
  color: #666;
  display: inline-block;
  vertical-align: middle;
}

.scroll-view {
  height: calc(100% - 80rpx);
}

.page_main {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.waterfall_list {
  position: relative;
  float: left;
  width: 50%;
  min-height: 200rpx;
  box-sizing: border-box;
}

.waterfall_list.left {
  padding-left: 20rpx;
  padding-right: 10rpx;
}

.waterfall_list.right {
  padding-left: 10rpx;
  padding-right: 20rpx;
}

.content {
  width: 98%;
  margin: 0rpx 1%;
}

.content_bottom_border {
  border-bottom: 1rpx solid #bfbfbf;
}

/* =================== 内容头部开始 =================== */

.con_top {
  height: 80rpx;
  margin-top: 20rpx;
}

.con_top > .user_info {
  flex-grow: 1;
}

.con_top > .user_info > .user_head, .con_top > .user_info > .user_head::before {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.con_top > .user_info > .user_name {
  margin: 0rpx 20rpx 0rpx 10rpx;
  font-size: 28rpx;
}

/* =================== 内容头部结束 =================== */

/* =================== 内容中部开始 =================== */

.con_main .media-cover {
  margin: 0;
  padding: 0;
  border: 0;
  z-index: 1;
}

.con_main .media-cover navigator {
  padding: unset;
  border: unset;
}

.con_main .media-cover image {
  margin: 0;
  padding: 0;
  border: 0;
  border-radius: 10rpx;
  z-index: 1;
}

.con_main .media-cover .built-up-layer {
  margin: -70rpx 15rpx 0 0;
  padding: 0;
  border: 0;
  height: 80rpx;
  text-align: right;
  vertical-align: text-top;
  z-index: 2;
}

.con_main .media-cover .built-up-layer image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  z-index: 2;
}

/* =================== 内容中部结束 =================== */

/* =================== 内容底部开始 =================== */

.con_bottom {
  height: 75rpx;
  line-height: 75rpx;
  margin-top: -10rpx;
  margin-bottom: 5rpx;
}

.con_bottom > .operation > view {
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.con_bottom > .operation > view > button,
.con_bottom > .operation > view > button::before,
.con_bottom > .operation > view > button::after {
  background: unset;
  font-size: unset;
  color: unset;
  background: unset;
}

.con_bottom > .operation > view > button > image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.con_bottom > .operation > .launch_tv {
  margin-right: 10rpx;
  padding: unset;
  width: 130rpx;
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 22rpx;
  font-size: 20rpx;
}

/* =================== 内容底部结束 =================== */
