/* pages/find/index.wxss */

.page_main {
  width: 100%;
  height: 100%;
}

.content {
  margin: 0rpx 30rpx 0rpx 30rpx;
}

.content_bottom_border {
  border-bottom: 1rpx solid #d9d3cd;
}

/* =================== 内容头部开始 =================== */

.con_top {
  height: 120rpx;
}

.con_top > .user_info {
  flex-grow: 1;
}

.con_top > .user_info > .user_head, .con_top > .user_info > .user_head::before {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #bebebe;
  vertical-align: middle;
}

.con_top > .user_info > .user_name {
  margin: 0rpx 20rpx 0rpx 10rpx;
}

.con_top > .operation > .launch_tv, .con_top > .operation > .launch_tv::before {
  margin-right: 10rpx;
  width: 150rpx;
  height: 55rpx;
  border: 1rpx solid #932c3f;
  border-radius: 12rpx;
  background-color: unset;
}

/* =================== 内容头部结束 =================== */

/* =================== 内容中部开始 =================== */

.con_main {
  margin: 0rpx 70rpx 0rpx 70rpx;
}

.con_main .weui-grid_1 {
  width: 100%;
}

.con_main .weui-grid_1 > image {
  width: 450rpx;
  height: 450rpx;
  border-radius: 10rpx;
}

.con_main .weui-grid_4 {
  position: relative;
  float: left;
  width: 34%;
  box-sizing: border-box;
}

.con_main .weui-grid_4 > image {
  width: calc((100vw - 200rpx) * 0.34 - 8rpx);
  height: calc((100vw - 200rpx) * 0.34 - 8rpx);
  border-radius: 10rpx;
}

.con_main .weui-grid image {
  width: calc((100vw - 200rpx) / 3 - 8rpx);
  height: calc((100vw - 200rpx) / 3 - 8rpx);
  border-radius: 10rpx;
}

.con_main > .video navigator {
  width: 450rpx;
  height: 450rpx;
}

.con_main > .video navigator > image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.con_main > .video .cover {
  width: 255rpx;
  height: 255rpx;
  margin: -450rpx 0rpx 0rpx 0rpx;
  padding: 195rpx 0rpx 0rpx 195rpx;
  border: 0rpx;
}

.con_main > .video .cover > navigator {
  width: 60rpx;
  height: 60rpx;
}

.con_main > .video .cover > navigator > .icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
}

.con_main > .video .cover > view {
  margin-top: 115rpx;
  padding-right: 20rpx;
  text-align: right;
}

/* =================== 内容中部结束 =================== */

/* =================== 内容底部开始 =================== */

.con_bottom {
  height: 75rpx;
  padding-left: 70rpx;
}

.con_bottom > .hotel_info {
  flex-grow: 1;
}

.con_bottom > .operation > view {
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.con_bottom > .operation > view > button,
.con_bottom > .operation > view > button::before,
.con_bottom > .operation > view > button::after {
  background: unset;
}

.con_bottom > .operation > view > button > image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

/* =================== 内容底部结束 =================== */
