.page_main .article .con_main .media video {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.page_main .article .con_main .media image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.page_main .article .con_bottom {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
}

.page_main .article .con_bottom > .operation {
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.page_main .article .con_bottom > .operation > view {
  /* margin-left: 15rpx; */
  margin-right: 30rpx;
}

.page_main .article .con_bottom > .operation > view > button,
.page_main .article .con_bottom > .operation > view > button::before,
.page_main .article .con_bottom > .operation > view > button::after {
  margin: unset;
  padding: unset;
  background: unset;
  border: unset;
}

.page_main .article .con_bottom > .operation > view > button > image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.page_main .article .con_bottom > .operation > view > button > label {
  font-size: 24rpx;
  color: #666;
  vertical-align: middle;
}

.page_bottom {
  height: 100rpx;
}

.page_bottom .option > button {
  height: 100rpx;
  line-height: 100rpx;
  border: unset;
  border-radius: 0rpx;
  font-size: 34rpx;
}
