.page_top {
  display: none;
}

.page_main .article {
  padding: 0rpx 60rpx;
}

.page_main .article .con_top {
  height: 120rpx;
  line-height: 120rpx;
}

.page_main .article .con_top .user_info image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.page_main .article .con_top .user_info label {
  margin-left: 20rpx;
  font-size: 36rpx;
  vertical-align: middle;
}

.page_main .article .con_main .speak_with_interest label {
  word-break: break-all;
  line-height: 50rpx;
  display: block;
  overflow: hidden;
  font-size: 30rpx;
}

.page_main .article .con_main .media {
  width: 640rpx;
  height: 360rpx;
  line-height: 360rpx;
  text-align: center;
}

