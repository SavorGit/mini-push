<!--pages/demand/index.wxml-->
<import src="/pages/template/commons" />
<template is="navigationBarForTopLevel" data='{{statusBarHeight: statusBarHeight,titleText:"热点投屏"}}' />

<scroll-view class="container flex-column-center-flex_start theme-container" style='height: calc(100vh - 46px - {{statusBarHeight}}px);' bindscrolltolower="loadMore" data-boxmac="{{box_mac}}" scroll-y="true" scroll-with-animation="true">

  <!-- 轮播图开始 -->
  <swiper wx:if="{{imgUrls.length > 0}}" class="swiper full_width" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{lb_duration}}">
    <block wx:for="{{imgUrls}}" wx:key="item" wx:for-index="index">
      <swiper-item>
        <navigator wx:if="{{item.clicktype == 1}}" class='full_width full_height navigator-hover' target="miniProgram" app-id="{{item.appid}}" path="{{item.linkcontent}}">
          <image class="full_width full_height" mode='aspectFill' src="{{item.oss_addr}}" />
        </navigator>
        <button wx:if="{{item.clicktype == 2}}" class='full_width full_height' bindtap='{{item.bindtap}}' data-boxmac="{{box_mac}}" data-openid="{{openid}}" data-index='{{index}}' data-linkcontent='{{item.linkcontent}}'>
          <image class="full_width full_height" mode='aspectFill' src="{{item.oss_addr}}" />
        </button>
      </swiper-item>
    </block>
  </swiper>
  <!-- 轮播图结束 -->

  <view class='flex-column-center-flex_start'>
    <!-- 循环开始 -->
    <view class='article' wx:for="{{program_list}}" wx:key="key" wx:for-item="bean" wx:for-index="index">
      <view class='cover full_width flex-column-center-flex_start'>
        <navigator class="full_width full_height" url="/pages/demand/goods_detail?box_mac={{box_mac}}&goods_id={{bean.id}}">
          <image class='full_width full_height theme2' mode='aspectFill' src='{{bean.img_url}}'></image>
        </navigator>
        <navigator class='full full_width flex-column-stretch-flex_start' bindtap='demandLog' data-openid='{{openid}}' data-box_mac='{{box_mac}}' data-title='{{bean.title}}' data-tx_url='{{bean.tx_url}}' data-id='{{bean.id}}' data-duration="{{bean.duration}}"
          url="/pages/demand/goods_detail?box_mac={{box_mac}}&goods_id={{bean.id}}">
          <label class='font_F6F6F6_28'>{{bean.title}}</label>
          <view class='play'>
            <label class="fa fa-play-circle icon theme-font4"></label>
          </view>
        </navigator>
      </view>
      <view class='con_bottom flex-row-center-flex_start theme-panel'>
        <view class='launch flex-row-center-flex_start'>
          <view class="flex-row-center-space_between">
            <navigator class='theme-button' data-name="{{bean.title}}" data-filename='{{bean.filename}}' data-vediourl="{{bean.tx_url}}" data-boxmac="{{box_mac}}" data-openid="{{openid}}" url="/pages/demand/goods_detail">商品详情</navigator>
            <button class='theme-button' bindtap='boxShow' data-name="{{bean.title}}" data-filename='{{bean.filename}}' data-vediourl="{{bean.tx_url}}" data-boxmac="{{box_mac}}" data-openid="{{openid}}">电视播放</button>
          </view>
        </view>
        <view class='operation flex-row-center-end font_666666_26'>
          <!-- <view>
            <label class="fa fa-play fa-lg" style="color: #666666;"></label>
            <label>{{bean.play_num}}</label>
          </view> -->
          <view wx:if="{{bean.is_collect==1}}">
            <label class="fa fa-heart fa-lg" style="color: #E11E4C;" bindtap='cancCollect' data-res_id="{{bean.id}}" data-type='{{bean.type}}' data-res_key="{{index}}"></label>
            <label>{{bean.collect_num}}</label>
          </view>
          <view wx:else>
            <label class="fa fa-heart-o fa-lg" style="color: #666666;" bindtap='onCollect' data-res_id="{{bean.id}}" data-type='{{bean.type}}' data-res_key="{{index}}"></label>
            <label>{{bean.collect_num}}</label>
          </view>
          <view>
            <button class="button_none" open-type='share' data-openid="{{openid}}" data-res_id="{{bean.id}}" data-type='{{bean.type}}' data-res_key="{{index}}" data-video_url="{{bean.tx_url}}" data-video_name="{{bean.title}}" data-video_img='{{bean.img_url}}'>
              <label class="fa fa-share-square-o fa-lg" style="color: #666666;"></label>
              <label>{{bean.share_num}}</label>
            </button>
          </view>
        </view>
      </view>
    </view>
    <!-- 循环结束 -->

    <view class="body-view">
      <loading hidden="{{hiddens}}" bindchange="loadingChange">加载中...</loading>
    </view>
  </view>

  <!-- 滚动页面底部留白 -->
  <view class='nav_bottom_space'></view>
</scroll-view>

<!-- 遥控器 -->
<template is="remoteControlWindow" data='{{popRemoteControlWindow: showControl, qrcode_img:qrcode_img, box_mac:box_mac, openid:openid, is_open_simple:is_open_simple}}' />

<!-- 固定悬浮按钮组 -->
<view wx:if="{{box_mac !=''}}">
  <template is="fixedSuspensionButtonGroup" />
</view>