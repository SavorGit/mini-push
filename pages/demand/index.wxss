/**index.wxss**/

/* ================================== 列表页 1.2.0 ================================== */

.swiper {
  height: 315rpx;
}

.swiper button {
  background-color: unset;
  border: 0;
  margin: 0;
  padding: 0;
  border-radius: 0;
}

.button-hover, .navigator-hover {
  background-color: unset;
  opacity: 1;
}

.article {
  margin: 0 0 15rpx 0;
  padding: 0;
  width: 720rpx;
}

.article > .cover {
  margin-top: 15rpx;
  width: 720rpx;
  height: 405rpx;
}

.article > .cover > navigator > image {
  border-radius: 12rpx 12rpx 0rpx 0rpx;
  z-index: 1;
}

.article > .cover .full {
  height: 405rpx;
  margin-top: -400rpx;
}

.article > .cover .full > label {
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 25rpx;
  text-shadow: 0 1px 1px #999;
  z-index: 2;
}

.article > .cover .full > .play {
  margin-top: calc(405rpx - 118rpx);
  text-align: right;
  z-index: 2;
}

.article > .cover .full > .play > .icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
  margin-right: 20rpx;
  z-index: 3;
}

.article > .con_bottom {
  height: 75rpx;
  border-radius: 0rpx 0rpx 12rpx 12rpx;
}

.article > .con_bottom > .launch {
  padding-left: 20rpx;
  flex-grow: 1;
}

.article > .con_bottom > .launch > view >  button {
  margin-right: 10rpx;
  padding: 0;
  width: 130rpx;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 20rpx;
  border-radius: 22rpx;
}

.article > .con_bottom > .operation > view {
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.article > .con_bottom > .operation > view image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.article > .con_bottom > .operation > view .fa {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.article > .con_bottom > .operation > view label {
  vertical-align: middle;
}

.article > .con_bottom > .operation > view > button {
  margin: 0;
  padding: 0;
  height: 60rpx;
  line-height: 60rpx;
  color: unset;
  font-size: unset;
  background: unset;
}

.article > .con_bottom > .operation > view > button::before,
.article > .con_bottom > .operation > view > button::after {
  border: unset;
  outline: unset;
  color: unset;
  font-size: unset;
  background: unset;
}
