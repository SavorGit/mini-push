/* ================================== 列表页 1.2.0 ================================== */

.swiper {
  height: 315rpx;
}

.swiper button {
  background-color: unset;
  border-radius: 0;
}

.article {
  width: 720rpx;
  margin: 0 0 15rpx 0;
  padding: 0;
}

.article > .cover {
  width: 720rpx;
  height: 405rpx;
  margin-top: 15rpx;
}

.article > .cover > navigator > image {
  border-radius: 12rpx 12rpx 0rpx 0rpx;
  z-index: 1;
}

.article > .cover > .full {
  height: 405rpx;
  margin-top: -400rpx;
}

.article > .cover > .full > label {
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 25rpx;
  text-shadow: 0 1px 1px #999;
  z-index: 2;
}

.article > .cover > .full > .play {
  margin-top: calc(405rpx - 118rpx);
  text-align: right;
  z-index: 2;
}

.article > .cover > .full > .play > .icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
  margin-right: 20rpx;
  z-index: 3;
}

.article > .con_bottom {
  height: 75rpx;
  border-radius: 0rpx 0rpx 12rpx 12rpx;
}

.article > .con_bottom > .launch {
  height: 100%;
  padding-left: 20rpx;
  flex-grow: 1;
}

.article > .con_bottom > .launch > view >  navigator,
.article > .con_bottom > .launch > view >  button {
  width: 130rpx;
  height: 45rpx;
  margin-right: 10rpx;
  display: block;
  text-align: center;
  line-height: 45rpx;
  font-size: 20rpx;
  border-radius: 22rpx;
}

.article > .con_bottom > .operation {
  width: 230rpx;
  height: 100%;
}

.article > .con_bottom > .operation > view,
.article > .con_bottom > .operation > button {
  max-width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 20rpx 0 0;
  text-align: unset;
}

/* ================================== 列表页 4.0.0 卡片样式1 ================================== */

.card {
  width: 100%;
}

.card > .model-1 {
  width: 100%;
  /* height: 785rpx; */
  margin-bottom: 20rpx;
}

.card > .model-1 > .body {
  width: 690rpx;
  /* height: 650rpx; */
  padding: 30rpx 30rpx 15rpx 30rpx;
}

.card > .model-1 > .body > .goods-pic {
  width: 690rpx;
  height: 390rpx;
  border-radius: 5rpx;
}

.card > .model-1 > .body > .goods-title {
  width: 100%;
  margin-top: 30rpx;
  font-size: 32rpx;
}

.card > .model-1 > .body > .goods-detail {
  width: 100%;
  margin-top: 30rpx;
  font-size: 24rpx;
