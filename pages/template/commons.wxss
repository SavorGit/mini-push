/* pages/template/commons.wxss */

/* ================================= 微信授权登录 ================================= */

.wxAuthLogin-container {
  background-color: #fff;
  width: 100%;
  height: 100%;
  text-align: center;
  border-radius: 20rpx;
}

.wxAuthLogin-container > .wxAuthLogin-top {
  padding: 50rpx 0rpx 10rpx 0rpx;
}

.wxAuthLogin-container > .wxAuthLogin-top > .opt {
  margin-top: -20rpx;
}

.wxAuthLogin-container > .wxAuthLogin-top > .opt > .close,
.wxAuthLogin-container > .wxAuthLogin-top > .opt > .close::before,
.wxAuthLogin-container > .wxAuthLogin-top > .opt > .close::after {
  position: fixed;
  right: 60rpx;
  margin: 0;
  padding: 0;
  border: 0;
  width: 30rpx;
  height: 30rpx;
  background-color: unset;
  line-height: 0;
}

.wxAuthLogin-container > .wxAuthLogin-top > .opt > .close > image {
  margin-right: 10rpx;
  width: 100%;
  height: 100%;
}

.wxAuthLogin-container > .wxAuthLogin-top > .title > label {
  font-weight: bold;
}

.wxAuthLogin-container > .wxAuthLogin-middle {
  padding: 20rpx 40rpx 20rpx 40rpx;
  margin-bottom: 20rpx;
}

.wxAuthLogin-container > .wxAuthLogin-middle > .content {
  display: block;
  margin-bottom: 20rpx;
}

.wxAuthLogin-container > .wxAuthLogin-middle > .link_relief {
  height: 60rpx;
  line-height: 60rpx;
}

.wxAuthLogin-container > .wxAuthLogin-middle > .link_relief > navigator {
  font-size: 30rpx;
  color: #999;
  text-decoration: underline;
}

.wxAuthLogin-container > .wxAuthLogin-bottom > button {
  width: 50%;
  border-radius: 40rpx;
}

/* ================================= 固定悬浮按钮组 ================================= */

.fixedSuspensionButtonGroup {
  position: fixed;
  right: 80rpx;
  bottom: 150rpx;
  width: 50rpx;
  height: 100rpx;
  z-index: 99;
}

.fixedSuspensionButtonGroup > .scan_tdc > button {
  margin: 0;
  padding: 0;
  border: 1rpx solid #1cbeb6;
  box-shadow: 0 0 15px #1cbeb6;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 49%;
  color: #1cbeb6;
  font-size: 24rpx;
}

.fixedSuspensionButtonGroup > .scan_tdc > button > image {
  width: 96rpx;
  height: 96rpx;
  border: 2rpx solid #1cbeb6;
  box-shadow: 0 0 10px #1cbeb6;
  border-radius: 49%;
}

/* ================================= 遥控器窗口 ================================= */

.remoteControlWindow-container {
  background-color: #1cbeb6;
  width: 100%;
  height: 100%;
  text-align: center;
  border-radius: 20rpx;
}

.remoteControlWindow-container .remoteControlWindow-control {
  padding: 20rpx;
  text-align: right;
}

.remoteControlWindow-container .remoteControlWindow-control image {
  width: 32rpx;
  height: 32rpx;
  background-color: rgba(99, 99, 99, 0.075);
}

.remoteControlWindow-container .remoteControlWindow-top {
  padding: 10rpx 50rpx;
}

.remoteControlWindow-container .remoteControlWindow-top .opt {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.remoteControlWindow-container .remoteControlWindow-top .opt button {
  width: 120rpx;
  height: 120rpx;
  border: unset;
  padding: unset;
  background: unset;
  border-radius: 60rpx;
}

.remoteControlWindow-container .remoteControlWindow-top .opt button image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.remoteControlWindow-container .remoteControlWindow-middle {
  height: 530rpx;
  padding-top: 30rpx;
}

.remoteControlWindow-container .remoteControlWindow-middle button {
  width: 400rpx;
  height: 400rpx;
  border: unset;
  padding: unset;
  background: unset;
  border-radius: 200rpx;
}

.remoteControlWindow-container .remoteControlWindow-middle button image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.remoteControlWindow-container .remoteControlWindow-middle .btn-tip {
  margin-top: -30rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.remoteControlWindow-container .remoteControlWindow-middle .btn-tip image {
  width: 64rpx;
  height: 64rpx;
  z-index: 2;
}

.remoteControlWindow-container .remoteControlWindow-middle .btn-tip {
  font-size: 32rpx;
  color: #fff;
}

.remoteControlWindow-container .remoteControlWindow-bottom {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
}

.remoteControlWindow-container .remoteControlWindow-bottom view {
  width: 50%;
  height: 80rpx;
}

.remoteControlWindow-container .remoteControlWindow-bottom button {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 15rpx;
}

.remoteControlWindow-container .remoteControlWindow-bottom navigator {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: auto;
  font-size: 28rpx;
  border-radius: 15rpx;
