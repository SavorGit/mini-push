<!-- pages/activity/turntable/index.wxml -->
<import src="/pages/template/commons" />
<template is="navigationBarForTwoLevel" data='{{statusBarHeight: statusBarHeight,titleText:"热点投屏"}}' />

<!-- ================================== 发起游戏 ================================== -->
<view class="container">
  <view class='game_launch full_width full_height'>
    <image class='game_launch_bg full_width full_height' src='http://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/games/drink/game_bg_launch.png' mode='aspectFit'></image>
    <button wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" data-box_mac='{{box_mac}}' data-openid='{{openid}}'>
      <image src='http://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/games/drink/btn_game_launch.png'></image>
    </button>
    <view wx:else>请升级微信版本</view>
  </view>
</view>