/* pages/mine/favorite.wxss */

.page_main {
  width: 100%;
  /* height: calc(100% - 138rpx); */
  height: 100%;
}

/* =============== 选项卡开始 =============== */

.content_bottom_border {
  border-bottom: 1rpx solid #bfbfbf;
}

.con_top {
  margin: 30rpx 30rpx 40rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.con_top > .user_info {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 1;
  justify-content: flex-start;
}

.con_top > .user_info > image {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.con_top > .user_info > label {
  margin-left: 20rpx;
  font-size: 36rpx;
}

.con_top > .operation {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.con_top > .operation > button {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  padding: unset;
  border: unset;
}

.con_main {
  margin: 0rpx 65rpx;
  padding: 0rpx;
  border: 0rpx;
  width: calc(100% - 130rpx);
}

.con_main .weui-grid navigator {
  width: calc((100vw - 130rpx) / 3 - 10rpx);
  height: calc((100vw - 130rpx) / 3 - 10rpx);
}

.con_main .weui-grid navigator image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.con_main > .video navigator {
  width: 450rpx;
  height: 450rpx;
}

.con_main > .video navigator > image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.con_main > .video .cover {
  width: 255rpx;
  height: 255rpx;
  margin: -450rpx 0rpx 0rpx 0rpx;
  padding: 195rpx 0rpx 0rpx 195rpx;
  border: 0rpx;
}

.con_main > .video .cover > navigator {
  width: 60rpx;
  height: 60rpx;
}

.con_main > .video .cover > navigator > .icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
}

.con_main > .video .cover > view {
  margin-top: 115rpx;
  padding-right: 20rpx;
  text-align: right;
}

.con_bottom {
  margin: 20rpx 65rpx 30rpx 65rpx;
}

.con_bottom > .hotel_info {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 1;
  justify-content: flex-start;
}

.con_bottom > .operation {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.con_bottom > .operation > .op-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.con_bottom > .operation > .op-left > view {
  margin-right: 30rpx;
}

.con_bottom > .operation > .op-left > view button,
.con_bottom > .operation > .op-left > view button::before,
.con_bottom > .operation > .op-left > view button::after {
  height: 50rpx;
  line-height: 50rpx;
  margin: unset;
  padding: unset;
  border: unset;
  background: unset;
  color: unset;
  font-size: unset;
}

.con_bottom > .operation > .op-left > view image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.con_bottom > .operation > .op-left > view label {
  vertical-align: middle;
}

.con_bottom > .operation > .op-right > label {
  text-decoration: underline;
}

/* =============== 选项卡结束 =============== */
