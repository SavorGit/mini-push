<!--pages/mine/assist/index.wxml-->
<import src="/pages/template/commons" />
<template wx:if="{{isShare}}" is="navigationBarForShare" data='{{statusBarHeight: statusBarHeight,titleText:"为好友助力"}}' />
<template wx:else is="navigationBarForTwoLevel" data='{{statusBarHeight: statusBarHeight,titleText:"邀请好友助力"}}' />

<view class="container theme-container" style='height: calc(100vh - 46px - {{statusBarHeight}}px);'>

  <!-- 内容信息面板 [他人] -->
  <view wx:if="{{isShare}}" class="assist-info-panel full_width theme-panel">
    <view class="other">
      <view class="people">
        <image class="head-img" src="http://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/imgs/default.jpeg"></image>
        <view>
          <label class="name">张三：</label>
          <label class="msg">“快来帮我助力！我要在全国千家高端餐厅SHOW”</label>
        </view>
      </view>
      <image class="img" src="http://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/imgs/default.jpeg"></image>
      <button class="theme-button">帮TA上电视</button>
    </view>
  </view>

  <!-- 内容信息面板 [自己] -->
  <view wx:else class="assist-info-panel full_width theme-panel">
    <view class="self">
      <view class="people">
        <image class="head-img" src="http://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/imgs/default.jpeg"></image>
        <view>
          <label class="name">张三：</label>
          <label class="msg">“快来帮我助力！我要在全国千家高端餐厅SHOW”</label>
        </view>
      </view>
      <image class="img" src="http://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/imgs/default.jpeg"></image>
      <button class="theme-button">帮TA上电视</button>
      <view>
        <label>您当前有</label>
        <label>30%</label>
        <label>的几率，加油亲~</label>
      </view>
    </view>
  </view>

  <!-- 助力人员面板 -->
  <view class="assist-people-panel full_width theme-panel">
    <view class="title-bar">
      <view class="title">已有18名好友帮您助力</view>
      <navigator class="more">查看全部》</navigator>
    </view>
    <view class="list full_width">
      <view class="people">
        <image class="head-img" src="http://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/imgs/default.jpeg"></image>
      </view>
