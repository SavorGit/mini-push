/* ==================================== 广告面板 ==================================== */

.advert-panel {
  height: 90rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.advert-panel > label, .advert-panel > button {
  display: block;
  margin: auto;
}

.advert-panel > button {
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 5rpx;
  font-size: 24rpx;
  padding: unset;
  border: unset;
}

.advert-panel > .fa {
  margin-right: 0;
}

.advert-panel > .msg {
  margin-left: 20rpx;
}
