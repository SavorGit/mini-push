.container {
  justify-content: start;
}

/* ==================================== 内容信息面板 [他人] ==================================== */

.assist-info-other-panel {
  width: calc(100% - 40rpx);
  height: 505rpx;
  padding: 20rpx 20rpx 25rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;
}

.assist-info-other-panel > .people {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: start;
}

.assist-info-other-panel > .people > .head-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.assist-info-other-panel > .people > view {
  width: calc(100% - 80rpx);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: start;
}

.assist-info-other-panel > .people > view > .name {
  margin-top: 15rpx;
}

.assist-info-other-panel > .people > view > .msg:nth-child(2) {
  margin-top: 20rpx;
}

.assist-info-other-panel > .people > view > .msg:nth-child(3) {
  margin-left: 24rpx;
}

.assist-info-other-panel > .img {
  width: 260rpx;
  height: 260rpx;
  margin-top: 30rpx;
  border-radius: 10rpx;
}

.assist-info-other-panel > .theme-button {
  width: 350rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 21rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
}

