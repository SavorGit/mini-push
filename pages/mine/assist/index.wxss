/* ==================================== 助力人员面板 ==================================== */

.assist-people-panel {
  height: 174rpx;
  margin-top: 20rpx;
}

.assist-people-panel > .title-bar {
  height: 24rpx;
  padding: 5rpx 20rpx 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.assist-people-panel > .list {
  height: 110rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
}

.assist-people-panel > .list > .people {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}

.assist-people-panel > .list > .people > .head-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* ==================================== 推荐面板 ==================================== */

.recommend-panel {
  height: 610rpx;
  margin-top: 10rpx;
}

.recommend-panel > .title-bar {
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
}

.recommend-panel > .title-bar > .title {
  width: 100rpx;
  display: block;
  text-align: center;
  font-size: 24rpx;
  padding-bottom: 2rpx;
  border-bottom: 6rpx solid #333;
}

.recommend-panel > .list > .row {
  height: 160rpx;
  padding: 20rpx 0 15rpx 0;
  margin: 0 25rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: start;
}

.recommend-panel > .list > .row.line {
  border-bottom: 1rpx solid #fff;
}

.recommend-panel > .list > .row > .img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 5rpx;
}

.recommend-panel > .list > .row > .info {
  width: calc(100% - 290rpx);
  height: 150rpx;
  padding-left: 30rpx;
  padding-bottom: 10rpx;
  border-radius: 5rpx;
}

.recommend-panel > .list > .row > .info > .rank {
  height: 30rpx;
  font-size: 28rpx;
  font-style: italic;
}

.recommend-panel > .list > .row > .info > .people {
  height: 30rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
}

.recommend-panel > .list > .row > .info > .msg {
  height: 25rpx;
  margin-top: 55rpx;
  font-size: 20rpx;
}

.recommend-panel > .list > .row > .btn::before,
.recommend-panel > .list > .row > .btn::after {
  background: unset;
  border: unset;
  margin: unset;
  padding: unset;
}

.recommend-panel > .list > .row > .btn {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  border-radius: 5rpx;
  border: unset;
  margin: unset;
  padding: unset;
}

