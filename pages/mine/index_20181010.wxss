.navigator-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.page_top {
  width: 100%;
  height: 190rpx;
}

.user {
  width: 100%;
  height: 100%;
}

.user>.head {
  width: 190rpx;
  height: 190rpx;
  line-height: 190rpx;
}

.user>.head>image {
  margin-left: 35rpx;
  margin-right: 35rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #bebebe;
  vertical-align: middle;
}

.user>.head>image::before {
  margin-left: 35rpx;
  margin-right: 35rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #bebebe;
  vertical-align: middle;
}

.user>.info {
  width: calc(100% - 190rpx);
}

.user>.info>label {
  width: 100%;
  height: 36rpx;
  padding: 10rpx 0rpx 10rpx 0rpx;
  display: block;
}

