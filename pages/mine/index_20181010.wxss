/* ================================ 活动商品管理面板 ================================ */
.promotion-goods-manage-panel {
  height: 100rpx;
  padding: 0 30rpx;
  border-top: 2rpx solid #ededed;
  font-size: 28rpx;
}

.promotion-goods-manage-panel>navigator {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

/* =============== 选项卡开始 =============== */
.swiper-tab {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-weight: bold;
}

.swiper-tab-item {
  width: 150rpx;
  height: 65rpx;
  margin: 0rpx 40rpx 0rpx 40rpx;
  display: inline-block;
  text-align: center;
}

.active {
  color: #666;
  border-bottom: 5rpx solid #F44444;
}

.content {
  padding: 20rpx 30rpx 20rpx 30rpx;
}

.con_main {
  margin: 0rpx;
  padding: 0rpx;
  border: 0rpx;
  width: 100%;
  min-height: 235rpx;
}

.con_main .weui-grid .yingtao {
  width: calc((100vw - 60rpx) / 3);
  height: calc((100vw - 60rpx) / 3);
}

.con_main .weui-grid:hover {
  background: #000;
  border: #000;
}

.con_main .weui-grid .yingtao navigator {
  margin: 0rpx 0rpx 0rpx 6rpx;
  width: calc(100% - 10rpx);
  height: calc(100% - 10rpx);
}

.con_main .weui-grid .yingtao navigator image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.con_main .weui-grid .yingtao .cover {
  margin: calc(100% * -1) 0rpx 0rpx 6rpx;
  width: calc(100% - 10rpx);
  height: calc(100% - 10rpx);
  border-radius: 10rpx;
  vertical-align: bottom;
}

.con_main .weui-grid .yingtao .cover .share {
  margin-top: calc(100% - 55rpx);
  margin-left: 5rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.con_main .weui-grid .yingtao .cover .share>image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.con_main .weui-grid .yingtao .cover .share>label {
  margin-left: 10rpx;
  vertical-align: middle;
}

/* =============== 选项卡结束 =============== */