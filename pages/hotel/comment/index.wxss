/* pages/hotel/comment/index.wxss */
/**
 * 用户满意度调查页面
 */


.waiter-evaluate-window {
  width: 100%;
}

.waiter-evaluate-window>.title-bar {
  width: calc(100% - 40rpx);
  height: 50rpx;
  padding: 20rpx 20rpx 10rpx;
}

.waiter-evaluate-window>.title-bar>.fa {
  font-size: 48rpx;
  font-weight: 100;
}

.waiter-evaluate-window>.document {
  width: 100%;
  height: 100%;
}

.waiter-evaluate-window>.document>.head {
  width: 100%;
  height: 100rpx;
}

.waiter-evaluate-window>.document>.head>.title {
  font-size: 48rpx;
  font-weight: 400;
}

.waiter-evaluate-window>.document .body {
  width: calc(100% - 50rpx);
  height: calc(100% - 250rpx);
  padding: 20rpx 25rpx 20rpx;
}

.waiter-evaluate-window>.document .body .waiter {
  width: calc(100% - 20rpx);
  height: 110rpx;
  padding: 10rpx 10rpx;
}

.waiter-evaluate-window>.document .body .waiter>.head-pic {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.waiter-evaluate-window>.document .body .waiter>.sketch {
  width: calc(100% - 138rpx);
  height: 100%;
}

.waiter-evaluate-window>.document .body .waiter>.sketch>.name {
  font-size: 36rpx;
  font-weight: 400;
}

.waiter-evaluate-window>.document .body .waiter>.sketch>.job {
  font-size: 28rpx;
  font-weight: 400;
}

.waiter-evaluate-window>.document .body .panel {
  width: calc(100% - 40rpx);
  padding: 25rpx 20rpx;
  border-radius: 10rpx;
}

.waiter-evaluate-window>.document .body .panel>.body {
  padding: 10rpx;
}

.waiter-evaluate-window>.document .body .panel>.body>.tab-body {
  padding: 10rpx;
}

.waiter-evaluate-window>.document .body .panel.evaluate>.score {
  width: 100%;
  height: 70rpx;
}

.waiter-evaluate-window>.document .body .panel.evaluate>.score>.label {
  width: 150rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.waiter-evaluate-window>.document .body .panel.evaluate>.score>.star-group {
  width: calc(100% - 300rpx);
}

.waiter-evaluate-window>.document .body .panel.evaluate>.score>.star-group>.fa {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 54rpx;
}

.waiter-evaluate-window>.document .body .panel.evaluate>.tag-group {
  width: 100%;
  padding: 10rpx 0;
}

.waiter-evaluate-window>.document .body .panel.evaluate>.tag-group>.tag {
  margin: 5rpx;
  padding: 10rpx 15rpx;
  display: inline-block;
  font-size: 24rpx;
  font-weight: normal;
  border-radius: 5rpx;
  border: 2rpx solid rgba(187, 187, 187, 0.43);
}

.waiter-evaluate-window>.document .body .panel.bestow {
  height: 250rpx;
  margin-top: 10rpx;
}

.waiter-evaluate-window>.document .body .panel.bestow>.title-bar {
  width: calc(100% - 20rpx);
  height: 60rpx;
  padding: 5rpx 10rpx;
}

.waiter-evaluate-window>.document .body .panel.bestow>.title-bar>.title {
  font-size: 28rpx;
  font-weight: 700;
}

.waiter-evaluate-window>.document .body .panel.bestow>.title-bar>.tab-bar>.tab {
  width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 26rpx;
  border: 2rpx solid #F55555;
}

.waiter-evaluate-window>.document .body .panel.bestow>.title-bar>.tab-bar>.tab.selected {
  color: #FFFFFF;
  background-color: #F55555;
}

.waiter-evaluate-window>.document .body .panel.bestow>.body {
  width: calc(100% - 20rpx);
  height: calc(100% - 90rpx);
  padding: 10rpx 10rpx;
}

.waiter-evaluate-window>.document .body .panel.bestow>.body>.tab-body {
  width: 100%;
}

.waiter-evaluate-window>.document .body .panel.bestow>.body>.tab-body>.item {
  width: 116rpx;
  height: 146rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-right: 15rpx;
  float: left;
  border: 2rpx dashed #666666;
}

.waiter-evaluate-window>.document .body .panel.bestow>.body>.tab-body>.item>.pic {
  width: 60rpx;
  height: 60rpx;
}

.waiter-evaluate-window>.document .body .panel.bestow>.body>.tab-body>.item>.fee {
  font-size: 32rpx;
  font-weight: 700;
}

.waiter-evaluate-window>.document .body .panel.bestow>.title-bar>.tab-bar>.tab.reward {
  border-radius: 28rpx 0 0 28rpx;
}

.waiter-evaluate-window>.document .body .panel.bestow>.title-bar>.tab-bar>.tab.none {
  border-radius: 0 28rpx 28rpx 0;
}

.waiter-evaluate-window>.document .body .panel.bestow>.body>.tab-body>.item.selected {
  width: 112rpx;
  height: 142rpx;
  border: 4rpx solid #F55555;
}

.waiter-evaluate-window>.document .body textarea {
  width: calc(100% - 10rpx);
  height: 150rpx;
  font-size: 28rpx;
  font-weight: normal;
  padding: 5rpx;
}

.waiter-evaluate-window>.document button {
  width: calc(100% - 80rpx);
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 40rpx;
  font-size: 36rpx;
  font-weight: normal;
  border-radius: 8rpx;
}