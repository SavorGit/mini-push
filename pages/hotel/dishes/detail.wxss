/* pages/hotel/dishes/detail.wxss */
.goods-info {
  width: 100%;
  height: 540rpx;
}

.goods-info>.pic-group {
  width: 100%;
  height: 400rpx;
}

.goods-info>.pic-group .pic {
  width: 100vw;
  height: 400rpx;
}

.goods-info>.pic-group .pic>image {
  width: 100%;
  height: 100%;
}

.goods-info>view {
  width: calc(100% - 50rpx);
  height: 140rpx;
  padding: 0 25rpx;
  font-size: 32rpx;
}

.goods-info>view>view {
  width: 100%;
}

.hotel-info {
  width: calc(100% - 50rpx);
  height: 200rpx;
  padding: 0 25rpx;
  margin-top: 10rpx;
}

.hotel-info>.pic {
  width: 154rpx;
  height: 154rpx;
  border-radius: 50%;
  border: 3rpx solid #ededed;
}

.hotel-info>.info {
  width: calc(100% - 300rpx);
  height: 120rpx;
  padding-left: 20rpx;
  font-size: 32rpx;
}

.hotel-info>.info>view {
  width: 100%;
}

.hotel-info>.info>view:last-child {
  font-size: 24rpx;
}

.hotel-info>.btn-group {
  width: 120rpx;
  height: 120rpx;
}

.hotel-info>.btn-group>.btn {
  width: 114rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 28rpx;
  border: 3rpx solid #a18668;
  border-radius: 5rpx;
}

.goods-detail {
  width: 100%;
  margin-top: 10rpx;
}

.goods-detail>.title {
  width: calc(100% - 70rpx);
  height: 40rpx;
  font-size: 32rpx;
  padding: 35rpx;
}

.goods-detail>.detail-text,
.goods-detail>.detail-pic {
  width: calc(100% - 120rpx);
  padding: 0 60rpx;
}

.goods-detail>.detail-text {
  line-height: 50rpx;
  font-size: 32rpx;
}

.goods-detail>.detail-pic>.pic {
  width: 100%;
}

.scroll-view {
  width: 100%;
  height: calc(100% - 88rpx);
}

.btn-buy {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
}