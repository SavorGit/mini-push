/* pages/hotel/cooperation.wxss */

/* =========================== 页面头部 =========================== */
.page_top {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}

.page_top>view {
  padding: 0 45rpx 0 40rpx;
}

.page_top>view .city_show>.icon {
  width: 38rpx;
  height: 30rpx;
  font-size: 30rpx;
  vertical-align: middle;
}

.page_top>view .city_show>label {
  vertical-align: middle;
}

.page_top>view .area_show>.icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.page_top>view .cuisine_show>.icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.page_top>view .perCapitaPay_show>.icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.page_top>view>.fa {
  width: 30rpx;
  height: 30rpx;
  font-size: 28rpx;
}

/* =========================== 页面主体 =========================== */

.page_main_scroll {
  height: calc(100% - 70rpx);
}

.page_main_scroll_banner {
  height: calc(100% - 170rpx);
}

.page_main {
  min-height: 100%;
}

.page_main>.row-item {
  min-height: 200rpx;
  padding: 40rpx 40rpx 45rpx 40rpx;
  margin-top: 10rpx;
}

.page_main>.row-item>.row-top {
  width: 100%;
  /* height: 200rpx; */
}

.page_main>.row-item>.row-top>.cover,
.page_main>.row-item>.row-top>.cover>image,
.page_main>.row-item>.row-top>.cover>view {
  width: 200rpx;
  height: 200rpx;
}

.page_main>.row-item>.row-top>.cover>view {
  height: 50rpx;
  line-height: 50rpx;
  margin-top: -48rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 0 0 5rpx 5rpx;
  z-index: 15;
}

.page_main>.row-item>.row-top>.cover {
  margin-right: 30rpx;
}

.page_main>.row-item>.row-top>.cover>image {
  border-radius: 5rpx;
}

.page_main>.row-item>.row-top>.i-right {
  width: calc(100% - 230rpx);
  /* height: 100%; */
}

.page_main>.row-item>.row-top>.i-right>.ir-top {
  width: 100%;
  /* height: 100%; */
}

.page_main>.row-item>.row-top>.i-right>.ir-top>.irt-left {
  width: calc(100% - 60rpx);
}

.page_main>.row-item>.row-top>.i-right>.ir-top>.irt-left>.hotel-name {
  width: 100%;
  font-size: 32rpx;
}

.page_main>.row-item>.row-top>.i-right>.ir-top>.irt-left>.irtl-bottom {
  margin: 25rpx 0 25rpx 0;
  font-size: 24rpx;
}

.page_main>.row-item>.row-top>.i-right>.ir-top>.irt-left>.irtl-bottom>label {
  margin-left: 40rpx;
}

.page_main>.row-item>.row-top>.i-right>.ir-top>.irt-left>.irtl-bottom>label:first-child {
  margin-left: 0;
}

.page_main>.row-item>.row-top>.i-right>.ir-top>.option,
.page_main>.row-item>.row-top>.i-right>.ir-top>.option>button {
  width: 60rpx;
}

.page_main>.row-item>.row-top>.i-right>.ir-top>.option>button {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 60rpx;
  border-radius: 25rpx;
}

.page_main>.row-item>.row-top>.i-right>.address {
  font-size: 28rpx;
}

.page_main>.row-item>.row-top>.i-right>.address>.icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.page_main>.row-item>.row-top>.i-right>.address>label {
  vertical-align: middle;
}

.page_main>.row-item>.row-bottom {
  width: 100%;
  height: 116rpx;
  margin-top: 60rpx;
}

.page_main>.row-item>.row-bottom>image {
  width: 116rpx;
  height: 116rpx;
  margin-left: 20rpx;
  border-radius: 5rpx;
}

.page_main>.row-item>.row-bottom>image:first-child {
  margin-left: 0;
}