/* pages/hotel/order/account.wxss */

input,
picker,
textarea {
  width: 454rpx;
  border: 3rpx solid #bebebe;
  font-size: 24rpx;
}

input,
picker {
  height: 54rpx;
}

textarea {
  height: 114rpx
}

.page-wapper {
  width: 100%;
  padding-top: 10rpx;
}

.input-panel {
  width: 100%;
  margin-top: 10rpx;
}

.input-panel>view {
  height: 90rpx;
  padding: 0 60rpx;
}

.input-panel>view>.lable {
  width: 120rpx;
  font-size: 28rpx;
}

.consignee-info {
  min-height: 370;
  margin-top: 0;
}

.consignee-info>.head {
  width: calc(100% - 60rpx);
  padding: 0 30rpx;
  font-size: 28rpx;
}

.consignee-info>.body {
  height: 120rpx;
  padding-bottom: 30rpx;
}

.consignee-info>.body>view {
  width: 100%;
  font-size: 28rpx;
}

.consignee-info>.body>view:first-child>.phone {
  width: 200rpx;
  margin-left: 30rpx;
}

/*
