/* pages/hotel/order/account_invoice.wxss */
/**
 * 订单发票页面
 */


.fa-weixin {
  color: rgb(74, 204, 60);
}

.page {
  width: 100%;
  height: 100%;
}

.main {
  width: calc(100% - 100rpx);
  height: calc(100% - 188rpx);
  padding: 50rpx;
}

.panel {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.panel>.title-bar {
  width: calc(100% - 60rpx);
  height: 80rpx;
  padding: 0 30rpx;
  border-bottom: 3rpx solid #dedede;
}

.panel>.title-bar>.title {
  font-size: 32rpx;
  font-weight: bold;
}

.panel>.title-bar>.right>.icon {
  font-size: 34rpx;
  margin-right: 10rpx;
}

.panel>.title-bar>.right>.name {
  font-size: 28rpx;
}

.panel>.body {
  width: calc(100% - 100rpx);
  padding: 10rpx 50rpx;
}

.panel>.body>.row {
  width: 450rpx;
  margin-top: 10rpx;
}

.panel>.body>.row>.input {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  border: 3rpx solid #BEBEBE;
}

.panel>.body>.row>.show {
  font-size: 28rpx;
}

.panel>.body>.row>.tab-bar {
  width: 100%;
  height: 60rpx;
}

.panel>.body>.row>.tab-bar>.tab {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 32rpx;
  color: #EB6877;
  border: 3rpx solid #EB6877;
}

.panel>.body>.row>.tab-bar>.company {
  border-radius: 10rpx 0 0 10rpx;
}

.panel>.body>.row>.tab-bar>.people {
  border-radius: 0 10rpx 10rpx 0;
}

.panel>.body>.row>.tab-bar>.selected {
  color: #fff;
  background-color: #eb6877;
}

.bottom,
.bottom>.btn {
  width: 100%;
  height: 88rpx;
}

.bottom>.btn {
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 0;
  padding: 0;
  border: 0;
}