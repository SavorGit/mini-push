} */

.birthday-list-grid > .cover > button {
  margin-top: 115rpx;
  margin-left: 109rpx;
  padding: 0rpx;
  width: 140rpx;
  height: 56rpx;
  background-color: unset;
}

.birthday-list-grid > .cover > button > image {
  margin: 0rpx;
  padding: 0rpx;
  border: unset;
  width: 100%;
  height: 100%;
}

/* =================================== 新版 =================================== */

.page_top {
  width: 100vw;
  display: none;
}

.page_main {
  width: 100vw;
}

.page_main .article {
  margin-bottom: 20rpx;
  padding: 0rpx 35rpx;
}

.page_main .article .con_top {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: space-between;
  justify-content: center;
}

.page_main .article .con_top .op-right {
  margin-right: 10rpx;
}

.page_main .article .con_top > label {
  font-size: 28rpx;
}

.page_main .article .con_top > button {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: unset;
  border: unset;
  border-radius: 25rpx;
  font-size: 28rpx;
}

.page_main .article .con_main {
  width: 684rpx;
  height: 456rpx;
  line-height: 456rpx;
  text-align: center;
}

.page_main .article .con_main image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
  border-radius: 10rpx;
}

.page_main .article .con_main .cover {
  width: 100%;
  height: 456rpx;
  line-height: 456rpx;
  margin-top: -456rpx;
  text-align: center;
}

.page_main .article .con_main .cover > image {
  width: 64rpx;
  height: 64rpx;
}

.page_main .article .con_bottom {
  height: 30rpx;
}

.page_bottom {
  width: 100vw;
  display: none;
}
