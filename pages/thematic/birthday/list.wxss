/* pages/thematic/birthday/list_constellation.wxss */

.birthday {
  width: 92%;
  height: 250rpx;
}

.birthday .video .title {
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.birthday .video .title image {
  width: 50rpx;
  height: 42rpx;
  vertical-align: middle;
}

.birthday .video .title label {
  font-size: 30rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.birthday .video .list {
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.birthday .video .list .music {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}

.birthday .video .list .music image {
  width: 64rpx;
  height: 64rpx;
}

.birthday .video .list .music label {
  font-size: 28rpx;
  color: #666;
}

.constellation_list {
  width: 92%;
  height: calc(100% - 250rpx);
}

.constellation_list .sketch_list {
  height: 300rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.constellation_list .sketch_list .constellation {
  margin: 0rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.constellation_list .sketch_list .constellation image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.constellation_list .sketch_list .constellation .summary {
  display: none;
}

.constellation_list .sketch_list .constellation.cur image {
  width: 200rpx;
  height: 200rpx;
}

.constellation_list .sketch_list .constellation.cur .title {
  font-size: 30rpx;
  color: #fff;
}

.constellation_list .sketch_list .constellation.cur .summary {
  display: block;
}

.constellation_list .detailed {
  height: calc(100% - 300rpx);
}

.constellation_list .detailed .video_list {
  height: 350rpx;
}

.constellation_list .detailed .video_list .title {
  height: 70rpx;
}

.constellation_list .detailed .video_list .title image {
  width: 54rpx;
  height: 54rpx;
  vertical-align: middle;
}

.constellation_list .detailed .video_list .title label {
  vertical-align: middle;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.constellation_list .detailed .video_list .list {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.constellation_list .detailed .video_list .list .video image {
  width: 340rpx;
  height: 255rpx;
}

.constellation_list .detailed .video_list .list .video .cover {
  width: 340rpx;
  height: 255rpx;
  margin-top: -255rpx;
  text-align: center;
}

.constellation_list .detailed .video_list .list .video .cover label {
  margin-top: 80rpx;
  margin-bottom: 60rpx;
  height: 50rpx;
  font-size: 30rpx;
  font-weight: 900;
  display: block;
}

.constellation_list .detailed .video_list .list .video .cover button {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  border-radius: 0rpx;
}

.constellation_list .detailed .overall .title {
  height: 70rpx;
}

.constellation_list .detailed .overall .title image {
  width: 54rpx;
  height: 54rpx;
  vertical-align: middle;
}

.constellation_list .detailed .overall .title label {
  vertical-align: middle;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.constellation_list .detailed .overall .property {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
}

.constellation_list .detailed .overall .property label {
  display: block;
}

.constellation_list .detailed .overall .describtion {
  margin-top: 50rpx;
  margin-bottom: 100rpx;
  font-size: 26rpx;
}

.constellation_list .detailed .overall .describtion label navigator {
  display: inline-block;
}
