/* pages/thematic/birthday/list.wxss */

.birthday {
  width: 92%;
  height: 250rpx;
}

.birthday .video .title {
  height: 50rpx;
}

.birthday .video .title .icon {
  width: 42rpx;
  height: 42rpx;
  font-size: 42rpx;
  vertical-align: middle;
}

.birthday .video .title label {
  font-size: 30rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.birthday .video .list {
  height: 200rpx;
}

.birthday .video .list .music {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.birthday .video .list .music image {
  width: 64rpx;
  height: 64rpx;
}

.birthday .video .list .music label {
  font-size: 24rpx;
  color: #666;
}

.birthday .video .list .music .icon {
  font-size: 36rpx;
  color: #1cbeb6;
}

.constellation_list {
  width: 92%;
  height: calc(100% - 250rpx);
}

.constellation_list .sketch_list {
  height: 350rpx;
}

.constellation_list .sketch_list .constellation {
  margin: 0rpx 20rpx;
  font-size: 24rpx;
}

.constellation_list .sketch_list .constellation image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  opacity: 0.7;
}

.constellation_list .sketch_list .constellation .title {
  margin-top: 10rpx;
}

.constellation_list .sketch_list .constellation .summary {
  display: none;
}

.constellation_list .sketch_list .constellation.cur image {
  width: 250rpx;
  height: 250rpx;
  opacity: 1;
}

.constellation_list .sketch_list .constellation.cur .title {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #333;
}

.constellation_list .sketch_list .constellation.cur .summary {
  display: block;
}

.constellation_list .detailed {
  height: calc(100% - 450rpx);
}

.constellation_list .detailed .video_list {
  height: 400rpx;
}

.constellation_list .detailed .video_list .title {
  height: 70rpx;
}

.constellation_list .detailed .video_list .title .icon {
  width: 54rpx;
  height: 54rpx;
  font-size: 54rpx;
  vertical-align: middle;
}

.constellation_list .detailed .video_list .title label {
  vertical-align: middle;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.constellation_list .detailed .video_list .list .video image {
  width: 340rpx;
  height: 255rpx;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
}

.constellation_list .detailed .video_list .list .video .cover {
  width: 340rpx;
  height: 255rpx;
  margin-top: -255rpx;
  text-align: center;
}

.constellation_list .detailed .video_list .list .video .cover label {
  margin-top: 80rpx;
  margin-bottom: 60rpx;
  height: 50rpx;
  font-size: 30rpx;
  font-weight: 900;
  display: block;
}

.constellation_list .detailed .video_list .list .video .cover button {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  border-radius: 0rpx;
}

.constellation_list .detailed .overall .title {
  height: 70rpx;
}

.constellation_list .detailed .overall .title image {
  width: 54rpx;
  height: 54rpx;
  vertical-align: middle;
}

.constellation_list .detailed .overall .title label {
  vertical-align: middle;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.constellation_list .detailed .overall .property {
  font-size: 26rpx;
}

.constellation_list .detailed .overall .property label {
  display: block;
}

.constellation_list .detailed .overall .describtion {
  margin-top: 50rpx;
  margin-bottom: 100rpx;
  font-size: 26rpx;
}

.constellation_list .detailed .overall .describtion label navigator {
  display: inline-block;
}

/* 发红包入口 */

.money_blessing {
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: 90rpx;
  text-align: center;
  vertical-align: middle;
}

.money_blessing .button {
  position: relative;
  display: block;
  box-sizing: border-box;
  width: 98%;
  height: 80rpx;
  line-height: 80rpx;
  background: #f05649;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
  text-align: center;
  text-decoration: none;
  overflow: hidden;
}
