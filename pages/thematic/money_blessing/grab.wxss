/* 抢红包-抢红包 pages/thematic/money_blessing/grab.wxss */

/* 导入红包样式 */
@import "/pages/thematic/money_blessing/money_blessing.wxss";

/* ======== 共用样式 ======== */

.PageTop {
  height: 50rpx;
}

.PageMain {
  height: calc(100% - 100rpx);
}

.PageMain .navigator-hover {
  background-color: unset;
  opacity: 1;
}

.PageMain .package {
  width: 90%;
  height: 530rpx;
  padding: 0 5%;
}

.PageMain .package > .head {
  height: 200rpx;
  text-align: center;
  margin-bottom: -100rpx;
}

.PageMain .package > .head image {
  width: 200rpx;
  height: 100%;
  border-radius: 50%;
  background-color: #fff;
}

.PageMain .package > .body {
  height: calc(100% - 170rpx);
  padding: 10rpx 50rpx 30rpx 50rpx;
  border-radius: 20rpx;
}

.PageMain .package > .body .user_name {
  text-align: center;
  font-size: 30rpx;
  font-weight: 900;
  margin-top: 10rpx;
  color: rgba(0, 0, 0, 0);
}

.PageMain .package > .body .blessing {
  text-align: center;
  font-size: 36rpx;
  font-weight: 900;
  margin-top: 70rpx;
}

.PageMain .package > .body .grab {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 40rpx;
  font-weight: 900;
  margin-top: 40rpx;
}

.PageMain .package > .body .grab .button {
  display: block;
  /* width: 50%; */
  height: 50rpx;
  line-height: 2;
  margin-left: auto;
  margin-right: auto;
  border-radius: 5rpx;
  padding: unset;
  border: unset;
  text-align: center;
  text-decoration: none;
  overflow: hidden;
  font-size: 28rpx;
}

.PageBottom {
  height: 50rpx;
}

/* ======== 支付成功 ======== */

.PageMain .package > .body .message {
  text-align: center;
  font-size: 50rpx;
  font-weight: 900;
  margin-top: 100rpx;
  padding-bottom: 50rpx;
}

/* ======== 支付失败 ======== */

.PageMain .package > .body .money {
  text-align: center;
  font-size: 80rpx;
  font-weight: 900;
  margin-top: 0rpx;
}

.PageMain .package > .body .money > sub {
  font-size: 30rpx;
  font-weight: 900;
}

/* ======== 入口卡片 ======== */

.EntranceCardColor {
  background-color: #fedfb2;
  color: #f05649;
}

.PageMain .EntranceCard {
  width: 90%;
  height: 200rpx;
  margin: 0 5%;
  border-radius: 20rpx;
}

.PageMain .EntranceCard > .header-bar {
  height: 130rpx;
  padding-top: 50rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.PageMain .EntranceCard > .slogan-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
  font-weight: 900;
  margin-bottom: 50rpx;
}

.PageMain .EntranceCard > .entrance-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 50rpx;
}

.PageMain .EntranceCard > .entrance-bar > .entrance {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  font-weight: 900;
}

.PageMain .EntranceCard > .entrance-bar > .entrance image {
  width: 80rpx;
  height: 70rpx;
  vertical-align: middle;
  text-align: center;
  margin-bottom: 10rpx;
}

/* ======== 发现精选 ======== */

.PageMain .FindSelected {
  width: 90%;
  margin: 80rpx 5% 50rpx 5%;
}

.PageMain .FindSelected > .header {
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: solid #666 1rpx;
}

.PageMain .FindSelected > .header > label {
  margin-left: 15rpx;
  padding-left: 15rpx;
  border-left: solid #1cbeb6 10rpx;
  font-size: 34rpx;
  font-weight: 900;
}

/* .content {
  margin: 0rpx 30rpx 0rpx 30rpx;
} */

.content_bottom_border {
  border-bottom: 1rpx solid #666;
}

/* =================== 内容头部开始 =================== */

.con_top {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.con_top > .user_info {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 1;
  justify-content: flex-start;
}

.con_top > .user_info > .user_head, .con_top > .user_info > .user_head::before {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #bebebe;
  vertical-align: middle;
}

.con_top > .user_info > .user_name {
  margin: 0rpx 20rpx 0rpx 10rpx;
}

.con_top > .operation {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.con_top > .operation > .launch_tv {
  margin-right: 10rpx;
  width: 150rpx;
  height: 55rpx;
  padding: unset;
  line-height: 55rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

/* =================== 内容头部结束 =================== */

/* =================== 内容中部开始 =================== */

.con_main {
  margin: 0rpx 70rpx 0rpx 70rpx;
}

.con_main .weui-grid {
  width: calc((90vw - 140rpx) / 3);
  height: calc((90vw - 140rpx) / 3);
}

.con_main .weui-grid image {
  width: calc(100% - 8rpx);
  height: calc(100% - 8rpx);
  border-radius: 10rpx;
}

.con_main > .video navigator {
  width: 450rpx;
  height: 450rpx;
}

.con_main > .video navigator > image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.con_main > .video .cover {
  width: 255rpx;
  height: 255rpx;
  margin: -450rpx 0rpx 0rpx 0rpx;
  padding: 195rpx 0rpx 0rpx 195rpx;
  border: 0rpx;
}

.con_main > .video .cover > navigator {
  width: 60rpx;
  height: 60rpx;
}

.con_main > .video .cover > navigator > image {
  width: 100%;
  height: 100%;
}

.con_main > .video .cover > view {
  margin-top: 115rpx;
  padding-right: 20rpx;
  text-align: right;
}

/* =================== 内容中部结束 =================== */

/* =================== 内容底部开始 =================== */

.con_bottom {
  height: 75rpx;
  padding-left: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.con_bottom > .hotel_info {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 1;
  justify-content: flex-start;
  width: calc(100% - 160rpx);
}

.con_bottom > .hotel_info > .hotel_name {
  width: 310rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.con_bottom > .operation {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  width: 200rpx;
}

.con_bottom > .operation > view {
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.con_bottom > .operation > view > button,
.con_bottom > .operation > view > button::before,
.con_bottom > .operation > view > button::after {
  margin: unset;
  padding: unset;
  background: unset;
  border: unset;
}

.con_bottom > .operation > view > button > image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

/* =================== 内容底部结束 =================== */

.PageMain .FindSelected > .footer {
  height: 70rpx;
  line-height: 70rpx;
}

.PageMain .FindSelected > .footer > navigator {
  text-align: center;
  font-size: 26rpx;
  text-decoration: underline;
}
