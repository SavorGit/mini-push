/* 抢红包-抢红包 pages/thematic/money_blessing/grab.wxss */

/* 导入红包样式 */
@import "/pages/thematic/money_blessing/money_blessing.wxss";

/* ======== 共用样式 ======== */

.PageTop {
  height: 50rpx;
}

.PageMain {
  height: calc(100% - 100rpx);
}

.PageMain .navigator-hover {
  background-color: unset;
  opacity: 1;
}

.PageMain .package {
  width: 90%;
  height: 800rpx;
  padding: 0 5%;
}

.PageMain .package > .head {
  height: 200rpx;
  text-align: center;
}

.PageMain .package > .head image {
  width: 200rpx;
  height: 100%;
  border-radius: 50%;
}

.PageMain .package > .body {
  height: calc(100% - 300rpx);
  margin-top: -100rpx;
  padding: 120rpx 50rpx 30rpx 50rpx;
  border-radius: 20rpx;
}

.PageMain .package > .body .user_name {
  text-align: center;
  font-size: 30rpx;
  font-weight: 900;
  margin-top: 10rpx;
}

.PageMain .package > .body .blessing {
  text-align: center;
  font-size: 36rpx;
  font-weight: 900;
  margin-top: 20rpx;
}

.PageMain .package > .body .grab {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 40rpx;
  font-weight: 900;
  margin-top: 90rpx;
}

.PageMain .package > .body .grab .button {
  display: block;
  /* width: 50%; */
  height: 50rpx;
  line-height: 2;
  margin-left: auto;
  margin-right: auto;
  border-radius: 5rpx;
  padding: unset;
  border: unset;
  text-align: center;
  text-decoration: none;
  overflow: hidden;
  font-size: 28rpx;
}

.PageBottom {
  height: 50rpx;
}

/* ======== 支付成功 ======== */

.PageMain .package > .body .message {
  text-align: center;
  font-size: 50rpx;
  font-weight: 900;
  margin-top: 100rpx;
  padding-bottom: 50rpx;
}

/* ======== 支付失败 ======== */

.PageMain .package > .body .money {
  text-align: center;
  font-size: 100rpx;
  font-weight: 900;
  margin-top: 80rpx;
}

.PageMain .package > .body .money > sub {
  font-size: 30rpx;
  font-weight: 900;
}
