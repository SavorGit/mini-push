/* pages/recommend/hotel.wxss */

/* =========================== 页面头部 =========================== */

.page_banner {
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
}

.page_banner .layout {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.page_banner .layout > label {
  margin-left: auto;
  margin-right: auto;
  display: block;
  width: 500rpx;
  overflow: hidden;
}

.page_banner .layout > navigator {
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding: 0rpx;
  box-sizing: border-box;
  text-align: center;
  text-decoration: none;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
}

.page_top {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
}

.page_top > view {
  padding: 0rpx 25rpx 0rpx 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.page_top > view .city_show > .icon {
  width: 38rpx;
  height: 30rpx;
  font-size: 30rpx;
  vertical-align: middle;
}

.page_top > view .city_show > label {
  vertical-align: middle;
}

.page_top > view .area_show > .icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.page_top > view .cuisine_show > .icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.page_top > view .perCapitaPay_show > .icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

/* =========================== 页面主体 =========================== */

.page_main_scroll {
  height: calc(100% - 70rpx);
}

.page_main_scroll_banner {
  height: calc(100% - 170rpx);
}

.page_main {
  min-height: 100%;
}

.page_main > .row-item {
  padding: 25rpx 25rpx 20rpx 25rpx;
  min-height: 120rpx;
  border-bottom: 1rpx solid #bfbfbf;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.page_main > .row-item > .cover {
  width: 120rpx;
  height: 120rpx;
  margin-right: 25rpx;
}

.page_main > .row-item > .cover > image {
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

.page_main > .row-item > .i-right {
  width: calc(100% - 145rpx);
}

.page_main > .row-item > .i-right {
  width: calc(100% - 145rpx);
}

.page_main > .row-item > .i-right > .ir-top {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.page_main > .row-item > .i-right > .ir-top > .irt-left {
  width: calc(100% - 140rpx);
}

.page_main > .row-item > .i-right > .ir-top > .irt-left > .irtl-bottom {
  margin: 6rpx 0 6rpx 0;
}

.page_main > .row-item > .i-right > .ir-top > .option {
  width: 140rpx;
}

.page_main > .row-item > .i-right > .ir-top > .option > button {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  padding: unset;
  border: unset;
  border-radius: 25rpx;
}

.page_main > .row-item > .i-right > .address > .icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.page_main > .row-item > .i-right > .address > label {
  vertical-align: middle;
}

.flex-for-bottom {
  height: 100rpx;
  line-height: 100rpx;
  bottom: 10rpx;
  text-align: center;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.flex-for-bottom >.flex-tip {
  position: relative;
  width: 680rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 30rpx;
}

.flex-for-bottom >.flex-tip label {
  vertical-align: middle;
}

.flex-for-bottom >.flex-tip .btn-colse {
  margin-left: 30rpx;
  font-size: 46rpx;
}
