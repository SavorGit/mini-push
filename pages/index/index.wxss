.page_main > .tip > button {
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
  border-radius: 25rpx;
}

.page_main > .operation > view {
  align-items: center;
  padding: 10rpx 0rpx;
}

.page_main > .operation > view > image {
  width: 48rpx;
  height: 38rpx;
  vertical-align: middle;
}

.page_main > .operation > view > label {
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
  font-size: 34rpx;
}

.page_main > navigator {
  width: 100%;
  text-align: right;
  margin-right: 50rpx;
}

.page_main > navigator > image {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}

.page_main > navigator > label {
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
}

/* 扫描弹窗提示内容 */

