/* pages/interact/index.wxss */

/* ==================================== 轮播图面板 ==================================== */

.banner-loop-panel {
  height: 420rpx;
}

.banner-loop-panel button {
  background-color: unset;
  border-radius: 0;
}

/* ==================================== 连接信息面板 ==================================== */

.link-box-panel {
  height: 90rpx;
}

.link-box-panel > .tip > button {
  width: 60rpx;
  height: 24rpx;
  line-height: 20rpx;
  margin: 20rpx auto auto auto;
  background: unset;
  font-size: unset;
}

/* ==================================== 中部横幅图面板 ==================================== */

.middle-banner-panel {
  height: 180rpx;
  margin-top: 15rpx;
}

/* ==================================== 功能模块面板 ==================================== */

.functional-module-panel {
  height: 320rpx;
}

.functional-module-panel > .row > view, .functional-module-panel > .row > form {
  width: 33.33333333333%;
  display: block;
  text-align: center;
  padding: 10rpx 0rpx;
}

.functional-module-panel > .row button {
  line-height: unset;
  background: unset;
}

.functional-module-panel > .row > view > .icon,
.functional-module-panel > .row button > .icon {
  width: 74rpx;
  height: 74rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

.functional-module-panel > .row > view > .icon > image,
.functional-module-panel > .row button > .icon > image {
  width: 48rpx;
  height: 48rpx;
}

.functional-module-panel > .row > view > .pic,
.functional-module-panel > .row button > .pic {
  background-color: #ef6877;
}

.functional-module-panel > .row > view > .video,
.functional-module-panel > .row button > .video {
  background-color: #84ccc9;
}

.functional-module-panel > .row > view > .file,
.functional-module-panel > .row button > .file {
  background-color: #f19ec2;
}

.functional-module-panel > .row > view > .birthday,
.functional-module-panel > .row button > .birthday {
  background-color: #448aca;
}

.functional-module-panel > .row > view > .game,
.functional-module-panel > .row button > .game {
  background-color: #f29b76;
}

.functional-module-panel > .row > view > .history,
.functional-module-panel > .row button > .history {
  background-color: #8f82bc;
}

.functional-module-panel > .row > view > label,
.functional-module-panel > .row button > label {
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
}

/* ==================================== 推荐面板 ==================================== */

.recommend-panel {
  height: 1003rpx;
}

.recommend-panel > .title-bar {
  height: 40rpx;
  padding-top: 20rpx;
  padding-left: 25rpx;
}

.recommend-panel > .title-bar > .title {
  width: 100rpx;
  display: block;
  text-align: center;
  font-size: 24rpx;
  padding-bottom: 2rpx;
  border-bottom: 6rpx solid #333;
}

.recommend-panel > .list > .row {
  height: 160rpx;
  padding: 20rpx 0 10rpx 0;
  margin: 0 25rpx;
}

.recommend-panel > .list > .row.line {
  border-bottom: 1rpx solid #fff;
}

.recommend-panel > .list > .row > .img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 5rpx;
}

.recommend-panel > .list > .row > .info {
  width: calc(100% - 290rpx);
  height: 150rpx;
  padding-left: 30rpx;
  padding-bottom: 10rpx;
  border-radius: 5rpx;
}

.recommend-panel > .list > .row > .info > .rank {
  height: 30rpx;
  font-size: 28rpx;
  font-style: italic;
}

.recommend-panel > .list > .row > .info > .people {
  height: 30rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
}

.recommend-panel > .list > .row > .info > .msg {
  height: 25rpx;
  margin-top: 55rpx;
  font-size: 20rpx;
}

.recommend-panel > .list > .row > .btn {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  border-radius: 5rpx;
}

/* 扫描弹窗提示内容 */

.scan_tip {
  padding: 0rpx 40rpx;
  font-size: 30rpx;
  text-align: center;
}
