/* ==================================== 功能模块面板 ==================================== */

.functional-module-panel {
  height: 320rpx;
}

.functional-module-panel>.row>view,
.functional-module-panel>.row>form {
  width: 33.33333333333%;
  display: block;
  text-align: center;
  padding: 10rpx 0rpx;
}

.functional-module-panel>.row button {
  line-height: unset;
  background: unset;
}

.functional-module-panel>.row button[disabled] {
  color: #999 !important;
  background: unset !important;
}

.functional-module-panel>.row>view>.icon,
.functional-module-panel>.row button>.icon {
  width: 74rpx;
  height: 74rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

.functional-module-panel>.row>view>.icon>image,
.functional-module-panel>.row button>.icon>image {
  width: 48rpx;
  height: 48rpx;
}

.functional-module-panel>.row>view>.pic,
.functional-module-panel>.row button>.pic {
  background-color: #ef6877;
}

.functional-module-panel>.row>view>.video,
.functional-module-panel>.row button>.video {
  background-color: #84ccc9;
}

.functional-module-panel>.row>view>.file,
.functional-module-panel>.row button>.file {
  background-color: #f19ec2;
}

.functional-module-panel>.row>view>.birthday,
.functional-module-panel>.row button>.birthday {
  background-color: #448aca;
}

.functional-module-panel>.row>view>.game,
.functional-module-panel>.row button>.game {
  background-color: #f29b76;
}

.functional-module-panel>.row>view>.history,
.functional-module-panel>.row button>.history {
  background-color: #8f82bc;
}

.functional-module-panel>.row button[disabled]>view {
  background-color: #999 !important;
}

.functional-module-panel>.row>view>label,
.functional-module-panel>.row button>label {
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
}

/* ==================================== 推荐面板 ==================================== */

.recommend-panel {
  max-height: 1410rpx;
  margin-top: 20rpx;
}

.recommend-panel>.title-bar {
  height: 40rpx;
  padding-top: 20rpx;
  padding-left: 25rpx;
}

.recommend-panel>.title-bar>.title {
  width: 100rpx;
  display: block;
  text-align: center;
  font-size: 24rpx;
  padding-bottom: 2rpx;
  border-bottom: 6rpx solid #333;
}

.recommend-panel>.weui-grids {
  width: calc(100% - 60rpx);
  height: 1230rpx;
  padding: 30rpx;
}

