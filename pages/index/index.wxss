.navigator-hover {
  background-color: unset;
  opacity: 0.7;
}

.page_main {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

swiper {
  height: 364rpx;
  width: 100%;
}

swiper button {
  background-color: unset;
  border: 0;
  margin: 0;
  padding: 0;
  border-radius: 0;
}

swiper .button-hover {
  background-color: unset;
}

swiper-image {
  height: 100%;
  width: 100%;
}

.slide-image {
  height: 100%;
  width: 100%;
}

