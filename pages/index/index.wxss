.navigator-hover {
  background-color: unset;
  opacity: 0.7;
}

/* ==================================== 轮播图面板 ==================================== */

.banner-loop-panel {
  height: 420rpx;
}

.banner-loop-panel button {
  background-color: unset;
  border: 0;
  margin: 0;
  padding: 0;
  border-radius: 0;
}

.banner-loop-panel .button-hover {
  background-color: unset;
}

