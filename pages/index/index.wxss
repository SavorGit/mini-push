.recommend-panel>.weui-grids>.weui-grid:nth-child(even) {
  width: 340rpx;
}

.recommend-panel>.weui-grids>.weui-grid>.card {
  width: 340rpx;
  height: 380rpx;
  background-color: rgba(245, 246, 248, 0.5);
  border-radius: 5rpx;
