/* pages/share/video.wxss */

.page_main {
  width: 100%;
  height: 100%;
}

.content {
  margin: 0rpx 30rpx 0rpx 30rpx;
}

.content_bottom_border {
  border-bottom: 1rpx solid #333;
}

/* =================== 内容头部开始 =================== */

.con_top {
  height: 120rpx;
}

.con_top>.user_info {
  flex-grow: 1;
}

.con_top>.user_info>.user_head,
.con_top>.user_info>.user_head::before {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #333;
  vertical-align: middle;
}

.con_top>.user_info>.user_name {
  margin: 0rpx 20rpx 0rpx 10rpx;
}

/* =================== 内容头部结束 =================== */

/* =================== 内容中部开始 =================== */

.con_main {
  margin: 0rpx 70rpx 0rpx 70rpx;
}

.con_main>.video navigator {
  width: 450rpx;
  height: 450rpx;
}

.con_main>.video navigator>image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

/* =================== 内容中部结束 =================== */

/* =================== 内容底部开始 =================== */

.con_bottom {
  height: 75rpx;
  padding-left: 70rpx;
}

.con_bottom>.hotel_info {
  flex-grow: 1;
}

.con_bottom>.hotel_info>.time {
  width: 116rpx;
}

.con_bottom>.hotel_info>.hotel_name {
  width: 280rpx;
}

.con_bottom>.operation>view {
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.con_bottom>.operation>view>button,
.con_bottom>.operation>view>button::before,
.con_bottom>.operation>view>button::after {
  line-height: 32rpx;
  background: unset;
}

.con_bottom>.operation>view>button>image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

/* =================== 内容底部结束 =================== */