/* pages/share/pic.wxss */

.page_main {
  width: 100%;
  height: 100%;
}

.content {
  margin: 0rpx 30rpx 0rpx 30rpx;
}

.content_bottom_border {
  border-bottom: 1rpx solid #333;
}

/* =================== 内容头部开始 =================== */

.con_top {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.con_top > .user_info {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 1;
  justify-content: flex-start;
}

.con_top > .user_info > .user_head, .con_top > .user_info > .user_head::before {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #333;
  vertical-align: middle;
}

.con_top > .user_info > .user_name {
  margin: 0rpx 20rpx 0rpx 10rpx;
}

.con_top > .operation {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.con_top > .operation > .launch_tv {
  margin-right: 10rpx;
  width: 150rpx;
  height: 55rpx;
  line-height: 55rpx;
  border-radius: 27rpx;
  padding: unset;
  border: unset;
  font-size: 20rpx;
}

/* =================== 内容头部结束 =================== */

/* =================== 内容中部开始 =================== */

.con_main {
  margin: 0rpx 70rpx 0rpx 70rpx;
}

.con_main .weui-grid_1 {
  width: 100%;
}

.con_main .weui-grid_1 > image {
  width: 450rpx;
  height: 450rpx;
  border-radius: 10rpx;
}

.con_main .weui-grid_4 {
  position: relative;
  float: left;
  width: 34%;
  box-sizing: border-box;
}

.con_main .weui-grid_4 > image {
  width: calc((100vw - 200rpx) * 0.34 - 8rpx);
  height: calc((100vw - 200rpx) * 0.34 - 8rpx);
  border-radius: 10rpx;
}

.con_main .weui-grid image {
  width: calc((100vw - 200rpx) / 3 - 8rpx);
  height: calc((100vw - 200rpx) / 3 - 8rpx);
  border-radius: 10rpx;
}

/* =================== 内容中部结束 =================== */

/* =================== 内容底部开始 =================== */

.con_bottom {
  height: 75rpx;
  padding-left: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.con_bottom > .hotel_info {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 1;
  justify-content: flex-start;
}

.con_bottom > .operation {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.con_bottom > .operation > view {
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.con_bottom > .operation > view > button,
.con_bottom > .operation > view > button::before,
.con_bottom > .operation > view > button::after {
  margin: unset;
  padding: unset;
  background: unset;
  border: unset;
}

.con_bottom > .operation > view > button > image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

/* =================== 内容底部结束 =================== */
