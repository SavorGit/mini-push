/* pages/life/list.wxss */

/**
 * 生活分类列表
 */

/* =========================== 页面头部 =========================== */
.page_top {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}

.page_top>view {
  padding: 0 45rpx 0 40rpx;
}

.page_top>view .city_show>.icon {
  width: 38rpx;
  height: 30rpx;
  font-size: 32rpx;
  vertical-align: middle;
}

.page_top>view .city_show>label {
  vertical-align: middle;
}

.page_top>view .area_show>.icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.page_top>view .cuisine_show>.icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.page_top>view .perCapitaPay_show>.icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.page_top>view>.fa {
  width: 30rpx;
  height: 30rpx;
  font-size: 30rpx;
}

/* =========================== 页面主体 =========================== */

.page_main {
  height: calc(100% - 88rpx);
}

.list {
  min-height: 100%;
}

.list>.row-item {
  min-height: 200rpx;
  padding: 30rpx 40rpx;
  margin-top: 10rpx;
}

.list>.row-item>.row-top {
  width: 100%;
}

.list>.row-item>.row-top>.cover,
.list>.row-item>.row-top>.cover>image,
.list>.row-item>.row-top>.cover>view {
  width: 200rpx;
  height: 200rpx;
}

.list>.row-item>.row-top>.cover>view {
  height: 50rpx;
  line-height: 50rpx;
  margin-top: -48rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 0 0 5rpx 5rpx;
  z-index: 15;
}

.list>.row-item>.row-top>.cover {
  margin-right: 30rpx;
}

.list>.row-item>.row-top>.cover>image {
  border-radius: 5rpx;
}

.list>.row-item>.row-top>.i-right {
  width: calc(100% - 230rpx);
}

.list>.row-item>.row-top>.i-right>.ir-top {
  width: 100%;
}

.list>.row-item>.row-top>.i-right>.ir-top>.irt-left {
  width: calc(100% - 100rpx);
}

.list>.row-item>.row-top>.i-right>.ir-top>.irt-left>.hotel-name {
  display: block;
  width: 100%;
  font-size: 34rpx;
}

.list>.row-item>.row-top>.i-right>.ir-top>.irt-left>.irtl-bottom {
  margin: 25rpx 0 25rpx 0;
  font-size: 26rpx;
}

.list>.row-item>.row-top>.i-right>.ir-top>.irt-left>.irtl-bottom>label {
  margin-left: 40rpx;
}

.list>.row-item>.row-top>.i-right>.ir-top>.irt-left>.irtl-bottom>label:first-child {
  margin-left: 0;
}

.list>.row-item>.row-top>.i-right>.ir-top>.irt-rigth {
  width: 100rpx;
  text-align: end;
}

.list>.row-item>.row-top>.i-right>.ir-top>.irt-rigth>.btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 62rpx;
  border-radius: 25rpx;
  border: 0;
  padding: 0;
  margin: 0;
}

.list>.row-item>.row-top>.i-right>.ir-top>.irt-rigth>.btn::before,
.list>.row-item>.row-top>.i-right>.ir-top>.irt-rigth>.btn::after {
  margin: 0;
}

.list>.row-item>.row-top>.i-right>.ir-top>.irt-rigth>.distance {
  display: block;
  width: 100%;
  height: 34rpx;
  line-height: 34rpx;
  padding-top: 5rpx;
  font-size: 26rpx;
  text-align: right;
}

.list>.row-item>.row-top>.i-right>.address {
  font-size: 30rpx;
}

.list>.row-item>.row-top>.i-right>.address>.icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.list>.row-item>.row-top>.i-right>.address>label {
  vertical-align: middle;
}

.list>.row-item>.row-bottom {
  width: 100%;
  height: 116rpx;
  margin-top: 60rpx;
}

.list>.row-item>.row-bottom>image {
  width: 116rpx;
  height: 116rpx;
  margin-left: 20rpx;
  border-radius: 5rpx;
}

.list>.row-item>.row-bottom>image:first-child {
  margin-left: 0;
}