/**
 * 【游戏】游戏列表
 */


.page-warpper {
  width: calc(100% - 10rpx);
  padding: 5rpx 5rpx 50rpx 5rpx;
}

.item {
  width: calc(100% - 40rpx);
  height: 90rpx;
  padding: 5rpx 20rpx;
  margin-top: 3rpx;
  border-radius: 5rpx;
}

.item>.left {
  width: calc(100% - 100rpx);
}

.item>.left>.icon {
  width: 70rpx;
  height: 70rpx;
}

.item>.left>.icon image {
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

.item>.left>.title {
  /* width: calc(100% - 80rpx); */
  width: 100%;
  margin-left: 10rpx;
  font-size: 28rpx;
}

.item>.right {
  width: 100rpx;
}

.item>.right>.btn {
  width: 74rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 22rpx;
  color: #F44444;
  border: 3rpx solid #F44444;
  border-radius: 5rpx;
  margin: 0;
  padding: 0;
  background-color: unset;
}