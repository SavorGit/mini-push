/* 悬浮按钮 */

.buttom {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
  z-index: 1001;
  opacity: 0;
  background-color: #fff;
  border-radius: 50%;
}

.main {
  opacity: 1;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box {
  overflow: hidden;
  position: fixed;
  z-index: 1001;
}
