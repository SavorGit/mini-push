<!--components/modal/bottomModal.wxml-->
<view class='mask flex-row-center-flex_end' wx:if="{{show}}" bindtap='clickMask'>
  <view class='flex-column-flex_start-start' style="{{width != '' ? 'width: ' + width + ';' : ''}}{{height != '' ? 'height: ' + height + ';' : ''}}{{borderRadius != '' ? 'border-radius: ' + borderRadius + ';' : ''}}{{backgroundColor != '' ? 'background-color: ' + backgroundColor + ';' : ''}}">
    <view wx:if="{{titleText != ''}}" class='title flex-column-center-space_between' style='color: {{titleColor}};'>
      <label>{{titleText}}</label>
    </view>
    <scroll-view scroll-y class='main-content'>
      <slot></slot>
    </scroll-view>
    <view wx:if="{{cancelText != '' || confirmText != ''}}" class='modal-btn-wrapper flex-column-center-space_between'>
      <view wx:if="{{confirmText != ''}}" class='confirm-btn' style='color: {{confirmColor}}' bindtap='confirm'>{{confirmText}}</view>
      <view wx:if="{{cancelText != ''}}" class='cancel-btn' style='color: {{cancelColor}}' bindtap='cancel'>{{cancelText}}</view>
    </view>
  </view>
</view>