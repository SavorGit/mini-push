/* components/modal/bottomModal.wxss */

.mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  padding-bottom: 10rpx;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
}

.title {
  padding: 10rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  font-weight: bold;
  border-bottom: 2rpx solid rgba(246, 243, 238, 0.1);
}

.modal-btn-wrapper {
  font-weight: bold;
  border-top: 2rpx solid rgba(246, 243, 238, 0.1);
}

.cancel-btn, .confirm-btn {
  flex: 1;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

.confirm-btn {
  border-bottom: 2rpx solid rgba(246, 243, 238, 0.1);
}

.main-content {
  flex: 1;
  height: 100%;
  overflow-y: hidden;
}

scroll-view {
  color: #ede6de;
}
