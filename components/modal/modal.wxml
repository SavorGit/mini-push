<!--components/modal/modal.wxml-->
<view class='mask' wx:if="{{show}}" bindtap='clickMask'>
  <view class='modal-content' style="height:{{height}}">
    <scroll-view scroll-y class='main-content'>
      <slot></slot>
    </scroll-view>
    <view class='modal-btn-wrapper'>
      <view class='cancel-btn' style='color:rgba(7,17,27,0.6)' bindtap='cancel'>cancel</view>
      <view class='confirm-btn' style='color:#13b5f5' bindtap='confirm'>OK</view>
    </view>
  </view>
</view>