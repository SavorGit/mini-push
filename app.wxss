button {
  border: unset;
}

button::before, button::after {
  border: unset;
  padding: auto;
  margin: auto;
  background: unset;
}

.button_none, .button_none::before, .button_none::after {
  margin: inherit;
  border: inherit;
  padding: inherit;
  border-radius: inherit;
  background: inherit;
  font-size: inherit;
  color: inherit;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.nav_bottom_space {
  height: 8rpx;
}

.container {
  width: 100vw;
  height: calc(100vh - 46px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.full_width {
  width: 100%;
}

.full_height {
  height: 100%;
}

.flex-row-stretch-flex_start, .flex-row-center-flex_start,
.flex-row-center-start, .flex-row-center-flex_end, .flex-row-center-end,
.flex-column-stretch-flex_start, .flex-column-center-flex_start,
.flex-column-center-start, .flex-column-center-end, .flex-column-center-flex_end {
  display: flex;
}

.flex-row-stretch-flex_start, .flex-row-center-flex_start,
.flex-row-center-start, .flex-row-center-flex_end, .flex-row-center-end {
  flex-direction: row;
}

.flex-row-stretch-flex_start {
  align-items: stretch;
}

.flex-row-center-flex_start, .flex-row-center-start, .flex-row-center-flex_end,
.flex-row-center-end {
  align-items: center;
}

.flex-row-center-flex_start {
  justify-content: flex-start;
}

.flex-row-center-start {
  justify-content: start;
}

.flex-row-center-flex_end {
  justify-content: flex-end;
}

.flex-row-center-end {
  justify-content: end;
}

.flex-column-stretch-flex_start, .flex-column-center-flex_start,
.flex-column-center-start, .flex-column-center-end, .flex-column-center-flex_end {
  flex-direction: column;
}

.flex-column-stretch-flex_start {
  align-items: stretch;
  justify-content: flex-start;
}

.flex-column-center-flex_start, .flex-column-center-start,
.flex-column-center-end, .flex-column-center-flex_end {
  align-items: center;
}

.flex-column-center-flex_start {
  justify-content: flex-start;
}

.flex-column-center-start {
  justify-content: start;
}

.flex-column-center-flex_end {
  justify-content: flex-end;
}

.flex-column-center-end {
  justify-content: end;
}

.display_hide {
  display: none;
}

.display_show {
  display: block;
}

/* ================================== 按钮 ================================== */

.savor-btn {
  font-size: 34rpx;
}

/* ================== 表格布局开始 ================== */

.weui-grids {
  position: relative;
  overflow: hidden;
}

.weui-grids::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  /* border-top: 1px solid #d9d9d9;
  color: #d9d9d9; */
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.weui-grids::after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  /* border-left: 1px solid #d9d9d9;
  color: #d9d9d9; */
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.weui-grid {
  position: relative;
  float: left;
  width: 33.33333333%;
  box-sizing: border-box;
}

.weui-grid::before {
  content: " ";
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  /* border-right: 1px solid #d9d9d9;
  color: #d9d9d9; */
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.weui-grid::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  /* border-bottom: 1px solid #d9d9d9;
  color: #d9d9d9; */
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.weui-grid:active {
  background-color: #ececec;
}

