/* mall/pages/goods/recommendation.wxss */
@import "/animation.wxss";
/**
 * 【商城】商品推荐页面
 */


.mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 10;
}

.window-open {
  -webkit-animation-duration: 0.5s;
  animation-duration: 0.5s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  -webkit-animation-name: fadeInDown;
  animation-name: fadeInDown;
}

.window-close {
  -webkit-animation-duration: 0.5s;
  animation-duration: 0.5s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  -webkit-animation-name: fadeOutUp;
  animation-name: fadeOutUp;
}

.page {
  width: 100%;
}

.main-panel {
  width: 100%;
  height: calc(100% - 110rpx);
}

.main-panel>.body {
  width: 100%;
  height: calc(100% - 100rpx);
}

.main-panel>.body .list {
  width: 100%;
}

.main-panel>.body .list>.item {
  width: calc(100% - 40rpx);
  margin: 0 20rpx 20rpx 20rpx;
  border-radius: 10rpx;
}

.main-panel>.body .list>.item>.top,
.main-panel>.body .list>.item>.top>.pic {
  width: 100%;
  height: 400rpx;
}

.main-panel>.body .list>.item>.top>.pic {
  border-radius: 10rpx 10rpx 0 0;
}

.main-panel>.body .list>.item>.top>.marker {
  width: 80rpx;
  height: 43rpx;
  line-height: 43rpx;
  text-align: center;
  margin-top: -380rpx;
  margin-left: -10rpx;
  border-radius: 5rpx;
  font-size: 32rpx;
}

.main-panel>.body .list>.item>.bottom {
  width: calc(100% - 60rpx);
  padding: 20rpx 30rpx;
}

.main-panel>.body .list>.item>.bottom>.name {
  font-size: 28rpx;
}

.main-panel>.body .list>.item>.bottom>.bottom {
  width: 100%;
  padding-top: 20rpx;
}

.main-panel>.body .list>.item>.bottom>.bottom>.left>.price {
  font-size: 28rpx;
}

.main-panel>.body .list>.item>.bottom>.bottom>.left>.price>text {
  margin-left: 5rpx;
  font-size: 32rpx;
}

.main-panel>.body .list>.item>.bottom>.bottom>.left>.market {
  margin-left: 30rpx;
  text-decoration: line-through;
}

.main-panel>.body .list>.item>.bottom>.bottom>.right>.fa {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 40rpx;
}

.main-panel>.body .list>.item>.bottom>.bottom>.right>.fa-television {
  margin-right: 50rpx;
}

.main-panel>.body .list>.item>.bottom>.bottom>.right>.fa-cart-plus {
  font-size: 32rpx;
  border: 3rpx solid #F44444;
  border-radius: 50%;
}

.main-panel>.body .list>.item:last-child {
  margin-bottom: 120rpx;
}

/* ======================================== 购买商品弹窗 ======================================== */
.buy-goods-window {
  width: 100%;
  height: 80vh;
  z-index: 11;
  position: absolute;
  bottom: 0;
}

.buy-goods-window>.top {
  width: calc(100% - 50rpx);
  height: 110rpx;
  padding: 20rpx 20rpx 20rpx 30rpx;
  border-bottom: 3rpx solid #EDEDED;
}

.buy-goods-window>.top>.pic {
  width: 156rpx;
  height: 156rpx;
  border: 3rpx solid #FFFFFF;
  margin-top: -50rpx;
}

.buy-goods-window>.top>.center {
  width: calc(100% - 230rpx);
  height: 100%;
}

.buy-goods-window>.top>.center>.name {
  width: 100%;
  font-size: 28rpx;
}

.buy-goods-window>.top>.center>.price {
  width: 100%;
  font-size: 28rpx;
}

.buy-goods-window>.top>.right {
  width: 40rpx;
  height: 100%;
}

.buy-goods-window>.top>.right>.fa {
  font-size: 40rpx;
}

.buy-goods-window>.middle {
  width: calc(100% - 80rpx);
  height: calc(100% - 308rpx);
  padding: 10rpx 40rpx;
}

.buy-goods-window>.middle .specs-panel {
  width: 100%;
  padding: 10rpx 0;
}

.buy-goods-window>.middle .specs-panel>.title-bar {
  padding: 5rpx 0;
}

.buy-goods-window>.middle .specs-panel>.title-bar>.title {
  font-size: 28rpx;
}

.buy-goods-window>.middle .specs-panel>.body {
  padding: 5rpx 0;
}

.buy-goods-window>.middle .specs-panel>.body>.specs-group {
  width: 100%;
}

.buy-goods-window>.middle .specs-panel>.body>.specs-group>.specs {
  height: 40rpx;
  line-height: 40rpx;
  padding: 5rpx 15rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  display: inline-block;
  font-size: 24rpx;
  border-radius: 25rpx;
}

.buy-goods-window>.middle .specs-panel>.body>.specs-group>.specs.selected {
  color: #F44444;
  background-color: rgba(244, 68, 68, 0.3);
}

.buy-goods-window>.middle .count {
  width: 100%;
}

.buy-goods-window>.middle .count>.label {
  font-size: 28rpx;
}

.buy-goods-window>.middle .count>.value>.btn {
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 32rpx;
  color: #BEBEBE;
  border: 3rpx solid #BEBEBE;
  border-radius: 5rpx;
  margin: 0;
  padding: 0;
}

.buy-goods-window>.middle .count>.value>input {
  width: 60rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
}

.buy-goods-window>.middle .stock {
  width: 100%;
  font-size: 24rpx;
  padding-bottom: 10rpx;
}

.buy-goods-window>.bottom {
  width: 100%;
  height: 80rpx;
}

.buy-goods-window>.bottom>.btn {
  width: calc(50% - 2rpx);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 0;
  border: 0;
  margin: 0;
  padding: 0;
}