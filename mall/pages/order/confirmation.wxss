 } */

.misc>.body>view>.btn {
  width: calc(100% - 140rpx);
}

.misc>.body>view>.btn>.choosed {
  width: calc(100% - 40rpx);
  text-align: right;
}

.misc>.body>view>.btn>.fa {
  width: 40rpx;
  font-size: 28rpx;
}

.misc>.body>view>.value>.input {
  width: 120rpx;
  height: 40rpx;
  border: 3rpx solid #dedede;
}


.scroll-view {
  width: 100%;
  height: 100%;
}

.bottom {
  width: calc(100% - 60rpx);
  height: 70rpx;
  padding: 0 30rpx 28rpx 30rpx;
  position: absolute;
  bottom: 0;
}

.bottom>.price {
  width: calc(100% - 160rpx);
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 60rpx;
  font-size: 32rpx;
  border-radius: 34rpx 0 0 34rpx;
  box-shadow: 2px 2px 8px #DEDEDE;
}

.bottom>.btn {
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 0 34rpx 34rpx 0;
  margin: 0;
  padding: 0;
  border: 0;
  box-shadow: 2px 2px 8px #DEDEDE;
}

