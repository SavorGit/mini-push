.input-panel {
  width: 100%;
  margin-top: 10rpx;
}

.input-panel>.head {
  width: calc(100% - 60rpx);
  height: 70rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

/* .input-panel>view {
   padding: 0 60rpx;
 } */

.input-panel>.body {
  width: 100%;
}

.input-panel>.body>view {
  width: calc(100% - 120rpx);
  height: 90rpx;
  padding: 0 60rpx;
}

.input-panel>.body>view>.label {
  width: 120rpx;
  font-size: 28rpx;
}

.input-panel>.body>view>.icon {
  font-size: 34rpx;
  margin-right: 10rpx;
}

.input-panel>.body>view>.btn>.choosed {
  font-size: 28rpx;
}

.input-panel>.body>view>.btn>.fa {
  width: 60rpx;
  text-align: right;
  font-size: 32rpx;
}

.input-panel>.body>.row>.left>.icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.input-panel>.body>.row>.left>.label>.title {
  font-size: 28rpx;
}

.input-panel>.body>.row>.left>.label>.desc {
  font-size: 24rpx;
}

.input-panel>.body>.row>.right {
  font-size: 28rpx;
}

.consignee-info {
  min-height: 370;
  margin-top: 0;
}

.consignee-info>.head {
  width: calc(100% - 60rpx);
  padding: 0 30rpx;
  font-size: 28rpx;
}

.consignee-info>.body {
  min-height: 120rpx;
  padding-bottom: 30rpx;
}

.consignee-info>.body>view {
  font-size: 28rpx;
}

.consignee-info>.body>view:first-child>.phone {
  width: 200rpx;
  margin-left: 30rpx;
}

