.goods-info {
  /* height: 350rpx; */
  padding: 10rpx 0;
}

.goods-info>view {
  width: calc(100% - 60rpx);
  padding: 0 30rpx;
}


.goods-info>.body {
  width: calc(100% - 80rpx);
  height: calc(100% - 140rpx);
  padding: 0 40rpx;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}

.goods-info>.body>.hotel {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
}

.goods-info>.body>.row {
  width: 100%;
  height: 200rpx;
}

.goods-info>.body>.row>.pic {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.goods-info>.body>.row>.center {
  width: calc(100% - 320rpx);
  height: 160rpx;
  font-size: 32rpx;
  padding: 0 15rpx;
}

.goods-info>.body>.row>.center>view {
  width: 100%;
}


.goods-info>.body>.row>.center>.c-bottom {
  margin-top: 30rpx;
}

.goods-info>.body>.row>.center>.c-bottom>.specs {
  height: 30rpx;
  line-height: 30rpx;
  padding: 5rpx 15rpx;
  font-size: 20rpx;
  border-radius: 20rpx;
}

.goods-info>.body>.row>.right {
  width: 130rpx;
}

.goods-info>.body>.row>.right>.count {
  font-size: 32rpx;
}

.goods-info>.body>.row>.right>.count-chooser {
  width: 144rpx;
  font-size: 32rpx;
}

.goods-info>.body>.row>.right>.count-chooser>view {
  width: 42rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  font-size: 46rpx;
  color: #f0c02b;
}

.goods-info>.body>.row>.right>.count-chooser>input {
  width: 60rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  border: unset;
}

.goods-info>.foot {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
}

.goods-info>.foot>view:last-child {
  font-size: 32rpx;
  font-weight: bold;
}

.delivery>.head>.fee {
  font-size: 32rpx;
  font-weight: bold;
}

.delivery>.body>.row>view {
  width: 100rpx;
  font-size: 28rpx;
}

.delivery>.body>.row>.label {
  width: 150rpx;
}

.delivery>.body>.row>.block {
  width: 120rpx;
  text-align: right;
}

.delivery>.body>.row>.rule {
  text-decoration: underline;
}

