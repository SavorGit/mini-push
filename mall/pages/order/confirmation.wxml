<!--mall/pages/order/confirmation.wxml-->
<!--
 | 【商城】订单确认页面
 |-->


<import src="/pages/template/commons" />
<template is="navigationBarForTwoLevel" data='{{statusBarHeight: statusBarHeight,titleText:"确认订单"}}' />

<view class='container theme-container' style='height: calc(100vh - {{46 + statusBarHeight + SystemInfo.screenBottomSpace}}px);'>
	<form bindsubmit="">
		<scroll-view class="scroll-view" scroll-y="true" scroll-with-animation="true">
			<view class="page-wapper" style='height: calc(100vh - 46px - {{statusBarHeight}}px -10rpx);'>
				<view class="consignee-info input-panel theme-panel">
					<view class="body flex-column-center-space_between">
						<view class="choose-consignee flex-row-center-space_between" bindtap="">
							<view class="label">请选择收货地址</view>
							<view class="btn flex-row-center-flex_end">
								<view class="fa fa-angle-right" aria-hidden="true"></view>
							</view>
						</view>
					</view>
				</view>
				<view class="consignee-info input-panel theme-panel">
					<view class="head flex-row-center-space_between" bindtap="">
						<view>收货地址</view>
						<view class="fa fa-angle-right" aria-hidden="true"></view>
					</view>
					<view class="body flex-column-center-space_between">
						<view class="flex-row-center-flex_start">
							<view class="name">奔波儿灞</view>
							<view class="phone">187***5593</view>
						</view>
						<view class="address two-line-overflow">北京市朝阳区XXXXXXXXXXXXX</view>
					</view>
				</view>

				<view class="goods-info input-panel theme-panel">
					<view class="head">订单信息</view>
					<view class="body flex-column-center-space_between">
						<view class="hotel theme-font7">由花家怡园（世茂店）提供</view>
						<view class="row flex-row-center-space_between">
							<image class="pic" mode="aspectFill" src="https://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/imgs/default.jpeg" bindtap=""></image>
							<view class="center" bindtap="">
								<view class="name two-line-overflow">麻辣小龙虾一份（大份），38只，限量供应</view>
								<view class="price theme-font5">￥123</view>
							</view>
							<view class="right flex-row-center-flex_end">
								<view class="count one-line-overflow">X1</view>
							</view>
						</view>
						<view class="row flex-row-center-space_between">
							<image class="pic" mode="aspectFill" src="https://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/imgs/default.jpeg" bindtap=""></image>
							<view class="center" bindtap="">
								<view class="name two-line-overflow">麻辣小龙虾一份（大份），38只，限量供应</view>
								<view class="price theme-font5">￥123</view>
							</view>
							<view class="right flex-row-center-flex_end">
								<view class="count-chooser flex-row-center-space_between">
									<view class="fa fa-minus-circle" aria-hidden="true" bindtap=""></view>
									<input value="2" disabled="true" />
									<view class="fa fa-plus-circle" aria-hidden="true" bindtap=""></view>
								</view>
							</view>
						</view>
					</view>
					<view class="foot flex-row-center-space_between">
						<view class="theme-font2">合计：3件商品</view>
						<view class="theme-font5">￥369元</view>
					</view>
				</view>
				<view class="goods-info input-panel theme-panel">
					<view class="head">订单信息</view>
					<view class="body flex-column-center-space_between">
						<view class="hotel theme-font7">由花家怡园（世茂店）提供</view>
						<view class="row flex-row-center-space_between">
							<image class="pic" mode="aspectFill" src="https://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/imgs/default.jpeg" bindtap=""></image>
							<view class="center" bindtap="">
								<view class="name two-line-overflow">麻辣小龙虾一份（大份），38只，限量供应</view>
								<view class="price theme-font5">￥123</view>
							</view>
							<view class="right flex-row-center-flex_end">
								<view class="count one-line-overflow">X1</view>
							</view>
						</view>
						<view class="row flex-row-center-space_between">
							<image class="pic" mode="aspectFill" src="https://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/imgs/default.jpeg" bindtap=""></image>
							<view class="center" bindtap="">
								<view class="name two-line-overflow">麻辣小龙虾一份（大份），38只，限量供应</view>
								<view class="price theme-font5">￥123</view>
							</view>
							<view class="right flex-row-center-flex_end">
								<view class="count-chooser flex-row-center-space_between">
									<view class="fa fa-minus-circle" aria-hidden="true" bindtap=""></view>
									<input value="2" disabled="true" />
									<view class="fa fa-plus-circle" aria-hidden="true" bindtap=""></view>
								</view>
							</view>
						</view>
					</view>
					<view class="foot flex-row-center-space_between">
						<view class="theme-font2">合计：3件商品</view>
						<view class="theme-font5">￥369元</view>
					</view>
				</view>
				<!--
				<view class="delivery input-panel theme-panel">
					<view class="head flex-row-center-space_between">
						<view>配送费用</view>
						<view class="fee theme-font5">￥36</view>
					</view>
				</view>
        -->
				<view class="pay input-panel theme-panel">
					<view class="head">支付方式</view>
					<radio-group class="body flex-column-center-space_between" bindchange="">
						<view class="row flex-row-center-space_between">
							<view class="left flex-row-center-flex_start">
								<view class="icon fa fa-weixin" aria-hidden="true"></view>
								<view class="label flex-column-flex_start-center">
									<view class="title">微信支付</view>
									<view class="desc theme-font3"></view>
								</view>
							</view>
							<view class="right flex-row-center-space_between">
								<radio checked="true"></radio>
							</view>
						</view>
						<view class="row flex-row-center-space_between">
							<view class="left flex-row-center-flex_start">
								<view class="icon fa fa-universal-access" aria-hidden="true"></view>
								<view class="label flex-column-flex_start-center">
									<view class="title">线下支付</view>
									<view class="desc theme-font3"></view>
								</view>
							</view>
							<view class="right flex-row-center-space_between">
								<radio></radio>
							</view>
						</view>
					</radio-group>
				</view>
				<view class="misc input-panel theme-panel">
					<view class="body flex-column-center-space_between">
						<view class="flex-row-center-space_between" bindtap="gotoRemark">
							<view class="label">订单备注</view>
							<view class="btn flex-row-center-space_between">
								<view class="choosed one-line-overflow theme-font3">未填写</view>
								<view class="fa fa-angle-right" aria-hidden="true"></view>
							</view>
						</view>
						<view class="flex-row-center-space_between" bindtap="">
							<view class="label">发票信息</view>
							<view class="btn flex-row-center-space_between">
								<view class="choosed one-line-overflow theme-font3">未选择</view>
								<view class="fa fa-angle-right" aria-hidden="true"></view>
							</view>
						</view>
					</view>
				</view>
			</view>
		</scroll-view>
		<view class="bottom flex-row-flex_start-center">
			<view class="price theme-font5 theme-bg-FFFFFF">￥1234</view>
			<button class="btn theme-button-buy" form-type="submit" bindtap="">下单</button>
		</view>
	</form>
</view>