/* mall/pages/order/payment.wxss */
/**
 * 【商城】支付页面
 */
.mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 10;
}

.page {
  width: 100%;
}

.payment-panel {
  width: calc(100% - 60rpx);
  height: 350rpx;
  padding: 25rpx 30rpx;
}

.payment-panel>.success {
  width: 100%;
  height: 100%;
}

.payment-panel>.success>.status {
  width: 100%;
  height: calc(100% - 110rpx);
  padding-top: 30rpx;
}

.payment-panel>.success>.status>.icon {
  font-size: 128rpx;
  color: rgb(59, 191, 3);
}

.payment-panel>.success>.status>.centent {
  font-size: 32rpx;
  font-weight: bold;
}

.payment-panel>.success>.bottom {
  width: calc(100% - 70rpx);
  height: 80rpx;
  padding: 25rpx 35rpx;
}

.payment-panel>.success>.bottom>.btn {
  width: 174rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  border-radius: 5rpx;
  font-size: 32rpx;
  margin: 0;
  padding: 0;
  background: unset;
}

.payment-panel>.success>.bottom>.order {
  color: #333333;
  border: 3rpx solid #999999;
}

.payment-panel>.success>.bottom>.index {
  color: #F44444;
  border: 3rpx solid #F44444;
}

.recommend-panel {
  width: 100%;
  margin-top: 10rpx;
}

.recommend-panel>.title-bar {
  width: calc(100% - 60rpx);
  height: 80rpx;
  padding: 0 30rpx;
}

.recommend-panel>.title-bar>.title {
  height: 75rpx;
  line-height: 80rpx;
  padding: 0 10rpx;
  border-bottom: 5rpx solid #F44444;
  font-size: 32rpx;
}

.recommend-panel>.title-bar>.btn {
  font-size: 28rpx;
  margin: 0;
  padding: 0;
  border: 0;
  border-radius: 0;
}

.recommend-panel>.body {
  width: calc(100% - 40rpx);
  padding: 20rpx;
}

.recommend-panel>.body>.list {
  width: 100%;
}

.recommend-panel>.body>.list>.item {
  width: 50%;
  padding: 10rpx;
}

.recommend-panel>.body>.list>.item>.top {
  width: 100%;
  height: 335rpx;
}

.recommend-panel>.body>.list>.item>.top>.pic {
  width: 335rpx;
  height: 335rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.recommend-panel>.body>.list>.item>.bottom {
  width: clac(100% - 30rpx);
  height: 110rpx;
  padding: 20rpx 15rpx;
  border-radius: 0 0 10rpx 10rpx;
}

.recommend-panel>.body>.list>.item>.bottom>.name {
  width: 100%;
  font-size: 24rpx;
}

.recommend-panel>.body>.list>.item>.bottom>.bottom {
  width: 100%;
}

.recommend-panel>.body>.list>.item>.bottom>.bottom>.price {
  font-size: 24rpx;
}

.recommend-panel>.body>.list>.item>.bottom>.bottom>.btn {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 24rpx;
  border: 3rpx solid #F44444;
  border-radius: 50%;
  margin: 0;
  padding: 0;
  background: unset;
}

/* ======================================== 购买商品弹窗 ======================================== */
.buy-goods-window {
  width: 100%;
  height: 80vh;
  z-index: 11;
  position: absolute;
  bottom: 0;
}

.buy-goods-window>.top {
  width: calc(100% - 50rpx);
  height: 110rpx;
  padding: 20rpx 20rpx 20rpx 30rpx;
  border-bottom: 3rpx solid #EDEDED;
}

.buy-goods-window>.top>.pic {
  width: 156rpx;
  height: 156rpx;
  border: 3rpx solid #FFFFFF;
  margin-top: -50rpx;
}

.buy-goods-window>.top>.center {
  width: calc(100% - 230rpx);
  height: 100%;
}

.buy-goods-window>.top>.center>.name {
  width: 100%;
  font-size: 28rpx;
}

.buy-goods-window>.top>.center>.price {
  width: 100%;
  font-size: 28rpx;
}

.buy-goods-window>.top>.right {
  width: 40rpx;
  height: 100%;
}

.buy-goods-window>.top>.right>.fa {
  font-size: 40rpx;
}

.buy-goods-window>.middle {
  width: calc(100% - 80rpx);
  height: calc(100% - 308rpx);
  padding: 10rpx 40rpx;
}

.buy-goods-window>.middle .specs-panel {
  width: 100%;
  padding: 10rpx 0;
}

.buy-goods-window>.middle .specs-panel>.title-bar {
  padding: 5rpx 0;
}

.buy-goods-window>.middle .specs-panel>.title-bar>.title {
  font-size: 28rpx;
}

.buy-goods-window>.middle .specs-panel>.body {
  padding: 5rpx 0;
}

.buy-goods-window>.middle .specs-panel>.body>.specs-group {
  width: 100%;
}

.buy-goods-window>.middle .specs-panel>.body>.specs-group>.specs {
  height: 40rpx;
  line-height: 40rpx;
  padding: 5rpx 15rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  display: inline-block;
  font-size: 24rpx;
  border-radius: 25rpx;
}

.buy-goods-window>.middle .specs-panel>.body>.specs-group>.specs.selected {
  color: #F44444;
  background-color: rgba(244, 68, 68, 0.3);
}

.buy-goods-window>.middle .count {
  width: 100%;
}

.buy-goods-window>.middle .count>.label {
  font-size: 28rpx;
}

.buy-goods-window>.middle .count>.value>.btn {
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 32rpx;
  color: #BEBEBE;
  border: 3rpx solid #BEBEBE;
  border-radius: 5rpx;
  margin: 0;
  padding: 0;
}

.buy-goods-window>.middle .count>.value>input {
  width: 60rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
}

.buy-goods-window>.middle .stock {
  width: 100%;
  font-size: 24rpx;
  padding-bottom: 10rpx;
}

.buy-goods-window>.bottom {
  width: 100%;
  height: 80rpx;
}

.buy-goods-window>.bottom>.btn {
  width: calc(50% - 2rpx);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 0;
  border: 0;
  margin: 0;
  padding: 0;
}