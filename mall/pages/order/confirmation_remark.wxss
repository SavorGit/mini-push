/**
 * 【商城】订单确认备注页面
 */



.page {
  width: 100%;
  height: 100%;
}

.input {
  width: calc(100% - 16rpx);
  height: 300rpx;
  padding: 5rpx;
  font-size: 30rpx;
  border: 3rpx solid #bebebe;
}

.main {
  width: calc(100% - 40rpx);
  height: calc(100% - 128rpx);
  padding: 20rpx;
}

.bottom,
.bottom>.btn {
  width: 100%;
  height: 88rpx;
}

.bottom>.btn {
  line-height: 88rpx;
  text-align: center;
  font-size: 34rpx;
  margin: 0;
  padding: 0;
  border: 0;
  border-radius: 0;
}