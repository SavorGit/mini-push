/* mall/pages/gift/accept/multy_gift.wxss */
/**
 * 【商城】赠品转赠-收货地址
 */


.scroll-view {
  margin: 0;
  padding: 0;
  border: 0;
}

.page-warpper {
  width: 100vw;
}

.panel {
  width: 100%;
  margin-top: 10rpx;
}

.panel:first-child {
  margin-top: 0;
}

.panel>.title-bar {
  width: calc(100% - 40rpx);
  height: 86rpx;
  padding: 5rpx 20rpx;
  border-bottom: 3rpx solid #EDEDED;
}

.panel>.title-bar>.title {
  font-size: 30rpx;
}

.panel>.title-bar>.btn {
  width: 164rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 10rpx;
  border: 0;
  margin: 0;
  padding: 0;
}

.status-panel {
  width: calc(100% - 40rpx);
  padding: 20rpx;
}

.status-panel>.status {
  width: 100%;
  padding: 80rpx 0 0 0;
}

.status-panel>.status>.icon {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 82rpx;
  color: #F68855;
}

.status-panel>.status>.msg {
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  color: #F68855;
}

.status-panel>.tip {
  padding: 10rpx 20rpx;
  font-size: 30rpx;
}

.mine-address {
  width: 100%;
}

.mine-address>.body {
  width: calc(100% - 60rpx);
  padding: 5rpx 30rpx;
}

.mine-address>.body>.row {
  height: 120rpx;
}

.mine-address>.body>.row>.left {
  width: calc(100% - 80rpx);
}

.mine-address>.body>.row>.left>.icon {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 34rpx;
}

.mine-address>.body>.row>.left>.value {
  width: calc(100% - 70rpx);
  font-size: 30rpx;
}

.mine-address>.body>.row>.left>.choosed {
  width: calc(100% - 70rpx);
}

.mine-address>.body>.row>.left>.choosed>.consignee {
  width: 100%;
}

.mine-address>.body>.row>.left>.choosed>.consignee>.name {
  max-width: calc(50% - 10rpx);
  font-size: 30rpx;
}

.mine-address>.body>.row>.left>.choosed>.consignee>.phone {
  max-width: calc(50% - 10rpx);
  margin-left: 20rpx;
  font-size: 30rpx;
}

.mine-address>.body>.row>.left>.choosed>.address {
  width: 100%;
  font-size: 30rpx;
}

.mine-address>.body>.row>.right {
  width: 60rpx;
}

.mine-address>.body>.row>.right>.btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 34rpx;
  border: 0;
  margin: 0;
  padding: 0;
  background-color: unset;
}

.gift-panel>.body {
  width: 100%;
  height: 550rpx;
  padding-bottom: 50rpx;
}

.gift-panel>.body>.goods-info {
  width: calc(100% - 80rpx);
  height: 200rpx;
  margin: 20rpx 20rpx 0 20rpx;
  padding: 20rpx;
  background-color: #FAF3E6;
  border-radius: 5rpx;
}

.gift-panel>.body>.goods-info>.hotel {
  font-size: 26rpx;
}

.gift-panel>.body>.goods-info>.row {
  height: 150rpx;
  padding-top: 20rpx;
}

.gift-panel>.body>.goods-info>.row>.pic {
  width: 150rpx;
  height: 150rpx;
  border-radius: 5rpx;
}

.gift-panel>.body>.goods-info>.row>.center {
  width: calc(100% - 310rpx);
  height: 100%;
  margin-left: 20rpx;
}

.gift-panel>.body>.goods-info>.row>.center>.name {
  font-size: 26rpx;
}

.gift-panel>.body>.goods-info>.row>.center>.bottom {
  padding-bottom: 15rpx;
}

.gift-panel>.body>.goods-info>.row>.center>.bottom>.specs {
  font-size: 26rpx;
}

.gift-panel>.body>.goods-info>.row>.right {
  width: 140rpx;
  height: 100%;
}

.gift-panel>.body>.goods-info>.row>.right>.price {
  width: 100%;
  text-align: right;
  font-size: 30rpx;
}

.gift-panel>.body>.message-block {
  width: calc(100% - 70rpx);
  padding: 25rpx 35rpx;
}

.gift-panel>.body>.message-block .title-bar {
  width: calc(100% - 3rpx);
  padding-right: 3rpx;
}

.gift-panel>.body>.message-block .title-bar>.title {
  font-size: 30rpx;
}

.gift-panel>.body>.message-block .title-bar>.btn {
  width: 30rpx;
  height: 30rpx;
  font-size: 32rpx;
  color: #FBBBBB;
  border-bottom: 4rpx solid #FBBBBB;
  margin: 0;
  padding: 0;
}

.gift-panel>.body>.message-block .content {
  padding: 20rpx 0;
}

.gift-panel>.body>.message-block .content>.input,
.gift-panel>.body>.message-block .content>.view {
  width: 100%;
}

.gift-panel>.body>.message-block .content>.input {
  min-height: 40rpx;
  max-height: 80rpx;
  font-size: 32rpx;
  border: 3rpx solid #EDEDED;
}

.gift-panel>.body>.message-block .content>.view {
  font-size: 34rpx;
  font-weight: bold;
}

.gift-panel>.body>.sender {
  width: calc(100% - 40rpx);
  height: 64rpx;
  padding: 15rpx 20rpx;
}

.gift-panel>.body>.sender>.isp>.icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 5rpx;
}

.gift-panel>.body>.sender>.isp>.name {
  margin-left: 15rpx;
  font-size: 26rpx;
}

.gift-panel>.body>.sender>.nikename {
  font-size: 30rpx;
}