/* mall/pages/gift/accept/index.wxss */
/**
 * 【商城】转赠页面
 */


.scroll-view {
  margin: 0;
  padding: 0;
  border: 0;
}

.page-warpper {
  width: 100vw;
}

.status-panel {
  width: calc(100% - 40rpx);
  padding: 20rpx;
}

.status-panel>.status {
  width: 100%;
  padding: 80rpx 0 0 0;
}

.status-panel>.status>.icon {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 80rpx;
  color: #F68855;
}

.status-panel>.status>.msg {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #F68855;
}

.status-panel>.tip {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

/* --------------------- 单个赠品 --------------------- */
.option-panel {
  width: calc(100% - 100rpx);
  padding: 50rpx;
}

.option-panel>.btn {
  width: 350rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 50rpx;
  margin: 80rpx 0 0 0;
  padding: 0;
  border: 0;
}