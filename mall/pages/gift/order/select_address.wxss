/* mall/pages/gift/order/select_address.wxss */
/**
 * 【商城】赠品选择收货地址页面
 */


.status-panel {
  width: 100%;
  height: 200rpx;
}

.status-panel>view {
  color: rgb(251, 107, 33);
}

.status-panel>.icon {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 80rpx;
}

.status-panel>.content {
  margin-top: 30rpx;
  font-size: 28rpx;
}

.choose-address-panel {
  width: calc(100% - 100rpx);
  margin-top: 20rpx;
  padding: 20rpx 50rpx;
}


.choose-address-panel>.left {
  width: calc(100% - 100rpx);
}

.choose-address-panel>.left>.icon {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 40rpx;
}

.choose-address-panel>.left>.address {
  width: calc(100% - 60rpx);
  margin-left: 20rpx;
  font-size: 28rpx;
}


.choose-address-panel>.right {
  width: 40rpx;
}

.choose-address-panel>.right>.btn {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: right;
  font-size: 40rpx;
  margin: 0;
  padding: 0;
  border: 0;
}

.goto-panel {
  width: 100%;
  height: 100rpx;
  margin-top: 80rpx;
}

.goto-panel>.btn {
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: 0;
  margin: 0;
  padding: 0;
}