/**
 * 【商城】赠品领取成功页面
 */


.status-panel {
  width: 100%;
  padding: 50rpx 0 20rpx 0;
}

.status-panel>view {
  color: rgb(251, 107, 33);
}

.status-panel>.icon {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 80rpx;
}

.status-panel>.content {
  margin-top: 30rpx;
  font-size: 28rpx;
}

.goto-panel {
  width: 100%;
  padding: 30rpx 0;
}

.goto-panel>.btn {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 10rpx;
  border: 0;
  margin: 0;
  padding: 0;
}

.goto-panel>.gift-list,
.goto-panel>.goto-index {
  width: 194rpx;
  height: 54rpx;
  line-height: 54rpx;
}

.goto-panel>.gift-list {
  border: 3rpx solid #BEBEBE;
}

.goto-panel>.goto-index {
  color: rgb(255, 130, 107);
  border: 3rpx solid rgb(255, 130, 107);
}

.recommend-panel {
  width: 100%;
  margin-top: 20rpx;
}

.recommend-panel>.title-bar {
  width: calc(100% - 60rpx);
  height: 80rpx;
  padding: 0 30rpx;
}

.recommend-panel>.title-bar>.title {
  height: 75rpx;
  line-height: 80rpx;
  padding: 0 10rpx;
  border-bottom: 5rpx solid #F44444;
  font-size: 32rpx;
}

.recommend-panel>.title-bar>.btn {
  font-size: 28rpx;
  margin: 0;
  padding: 0;
  border: 0;
  border-radius: 0;
}

.recommend-panel>.body {
  width: calc(100% - 40rpx);
  padding: 20rpx;
}

.recommend-panel>.body>.list {
  width: 100%;
}

.recommend-panel>.body>.list>.item {
  width: 50%;
  padding: 10rpx;
}

.recommend-panel>.body>.list>.item>.top {
  width: 100%;
  height: 335rpx;
}

.recommend-panel>.body>.list>.item>.top>.pic {
  width: 335rpx;
  height: 335rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.recommend-panel>.body>.list>.item>.bottom {
  width: clac(100% - 30rpx);
  height: 110rpx;
  padding: 20rpx 15rpx;
  border-radius: 0 0 10rpx 10rpx;
}

.recommend-panel>.body>.list>.item>.bottom>.name {
  width: 100%;
  font-size: 24rpx;
}

.recommend-panel>.body>.list>.item>.bottom>.bottom {
  width: 100%;
}

.recommend-panel>.body>.list>.item>.bottom>.bottom>.price {
  font-size: 24rpx;
}

.recommend-panel>.body>.list>.item>.bottom>.bottom>.btn {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 24rpx;
  border: 3rpx solid #F44444;
  border-radius: 50%;
  margin: 0;
  padding: 0;
  background: unset;
}