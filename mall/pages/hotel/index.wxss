.tab-panel>.foods .add-to-dishes_cart {
  -webkit-animation-duration: 0.5s;
  animation-duration: 0.5s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  -webkit-animation-name: addToDishesCart;
  animation-name: addToDishesCart;
  z-index: 15;
}

@-webkit-keyframes addToDishesCart {
  0% {
    opacity: 1;
    -webkit-transform: none;
    -ms-transform: none;
    transform: none;
  }

  100% {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0) scale(0) translate(0, 80vh);
    -ms-transform: translate3d(0, 100%, 0) scale(0) translate(0, 80vh);
    transform: translate3d(0, 100%, 0) scale(0) translate(0, 80vh);
  }
}

@keyframes addToDishesCart {
  0% {
    opacity: 1;
    -webkit-transform: none;
    -ms-transform: none;
    transform: none;
  }

  100% {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0) scale(0) translate(0, 80vh);
    -ms-transform: translate3d(0, 100%, 0) scale(0) translate(0, 80vh);
    transform: translate3d(0, 100%, 0) scale(0) translate(0, 80vh);
  }
}

